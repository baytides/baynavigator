    } else if (e.key === 'Tab' && selectedSuggestionIndex >= 0) {
      e.preventDefault();
      const selected = items[selectedSuggestionIndex] as HTMLElement;
      const suggestion = selected?.dataset?.suggestion;
      if (suggestion && searchInput) {
