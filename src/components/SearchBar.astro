      return QUERY_REWRITES[queryLower];
    }

    // Check for partial matches
    for (const [pattern, rewrite] of Object.entries(QUERY_REWRITES)) {
      if (queryLower.includes(pattern)) {
        return rewrite;
      }
    }

    return query;
  }

