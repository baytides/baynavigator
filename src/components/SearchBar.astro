    locationPopover.classList.toggle('hidden');
    if (!locationPopover.classList.contains('hidden') && popoverZipInput) {
      popoverZipInput.focus();
    }
  }

  // Close popover
  function closeLocationPopover() {
    if (locationPopover) {
      locationPopover.classList.add('hidden');
