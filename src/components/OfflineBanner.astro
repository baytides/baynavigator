---
/**
 * Offline detection banner component
 * Shows a notification when user loses internet connectivity
 * Disappears automatically when connection is restored
 */
---

<div
  id="offline-banner"
  class="fixed bottom-0 left-0 right-0 z-50 transform translate-y-full transition-transform duration-300 ease-in-out"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
>
  <div class="bg-amber-900 text-white px-4 py-3 shadow-lg">
    <div class="max-w-7xl mx-auto flex items-center justify-between gap-4">
      <div class="flex items-center gap-3">
        <svg
          class="w-5 h-5 flex-shrink-0"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M18.364 5.636a9 9 0 010 12.728m0 0l-2.829-2.829m2.829 2.829L21 21M15.536 8.464a5 5 0 010 7.072m0 0l-2.829-2.829m-4.243 2.829a4.978 4.978 0 01-1.414-2.83m-1.414 5.658a9 9 0 01-2.167-9.238m7.824 2.167a1 1 0 111.414 1.414m-1.414-1.414L3 3m8.293 8.293l1.414 1.414"
          ></path>
        </svg>
        <div>
          <p class="font-medium" data-i18n="offline.youreOffline">You're offline</p>
          <p class="text-sm text-amber-200" data-i18n="offline.offlineMessage">
            Some features may be limited. Cached content is still available.
          </p>
        </div>
      </div>
      <button
        id="offline-banner-dismiss"
        type="button"
        class="p-1 hover:bg-amber-800 rounded transition-colors"
        aria-label="Dismiss offline notification"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>
</div>

<div
  id="online-banner"
  class="fixed bottom-0 left-0 right-0 z-50 transform translate-y-full transition-transform duration-300 ease-in-out"
  role="status"
  aria-live="polite"
>
  <div class="bg-green-800 text-white px-4 py-3 shadow-lg">
    <div class="max-w-7xl mx-auto flex items-center gap-3">
      <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"
        ></path>
      </svg>
      <p class="font-medium">You're back online</p>
    </div>
  </div>
</div>

<script>
  const offlineBanner = document.getElementById('offline-banner');
  const onlineBanner = document.getElementById('online-banner');
  const dismissBtn = document.getElementById('offline-banner-dismiss');

  let isDismissed = false;
  let onlineTimeout: ReturnType<typeof setTimeout> | null = null;

  function showOfflineBanner() {
    if (isDismissed || !offlineBanner) return;
    offlineBanner.classList.remove('translate-y-full');
  }

  function hideOfflineBanner() {
    if (!offlineBanner) return;
    offlineBanner.classList.add('translate-y-full');
  }

  function showOnlineBanner() {
    if (!onlineBanner) return;
    onlineBanner.classList.remove('translate-y-full');

    // Auto-hide after 3 seconds
    if (onlineTimeout) clearTimeout(onlineTimeout);
    onlineTimeout = setTimeout(() => {
      onlineBanner.classList.add('translate-y-full');
    }, 3000);
  }

  function handleOnline() {
    hideOfflineBanner();
    showOnlineBanner();
    isDismissed = false;
  }

  function handleOffline() {
    showOfflineBanner();
  }

  // Initialize
  if (!navigator.onLine) {
    showOfflineBanner();
  }

  // Event listeners
  window.addEventListener('online', handleOnline);
  window.addEventListener('offline', handleOffline);

  dismissBtn?.addEventListener('click', () => {
    isDismissed = true;
    hideOfflineBanner();
  });
</script>
