---
/**
 * Loading skeleton for ProgramCard
 * Displays while program data is being fetched or filtered
 */
---

<article class="card animate-pulse" aria-hidden="true" role="presentation">
  <div class="flex flex-wrap items-start justify-between gap-2 mb-3">
    <div class="flex items-center gap-2">
      <!-- Category badge skeleton -->
      <div class="h-6 w-20 bg-neutral-200 dark:bg-neutral-700 rounded-full"></div>
    </div>
    <!-- Location skeleton -->
    <div class="h-4 w-24 bg-neutral-200 dark:bg-neutral-700 rounded"></div>
  </div>

  <!-- Title skeleton -->
  <div class="h-7 w-3/4 bg-neutral-200 dark:bg-neutral-700 rounded mb-2"></div>

  <!-- Description skeleton (2 lines) -->
  <div class="space-y-2 mb-4">
    <div class="h-4 w-full bg-neutral-200 dark:bg-neutral-700 rounded"></div>
    <div class="h-4 w-5/6 bg-neutral-200 dark:bg-neutral-700 rounded"></div>
  </div>

  <!-- Details toggle skeleton -->
  <div class="h-4 w-28 bg-neutral-200 dark:bg-neutral-700 rounded mb-4"></div>

  <!-- Footer skeleton -->
  <div
    class="flex items-center gap-4 mt-auto pt-4 border-t border-neutral-100 dark:border-neutral-700"
  >
    <div class="h-9 w-28 bg-neutral-200 dark:bg-neutral-700 rounded"></div>
    <div class="h-4 w-32 bg-neutral-200 dark:bg-neutral-700 rounded"></div>
  </div>
</article>

<style>
  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }

  .animate-pulse > div {
    background: linear-gradient(
      90deg,
      rgb(229 231 235 / var(--tw-bg-opacity, 1)) 25%,
      rgb(243 244 246 / var(--tw-bg-opacity, 1)) 50%,
      rgb(229 231 235 / var(--tw-bg-opacity, 1)) 75%
    );
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
  }

  :global(.dark) .animate-pulse > div {
    background: linear-gradient(
      90deg,
      rgb(64 64 64 / var(--tw-bg-opacity, 1)) 25%,
      rgb(82 82 82 / var(--tw-bg-opacity, 1)) 50%,
      rgb(64 64 64 / var(--tw-bg-opacity, 1)) 75%
    );
    background-size: 200% 100%;
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .animate-pulse > div {
      animation: none;
    }
  }
</style>
