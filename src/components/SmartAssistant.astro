      // If no topic detected and no location, suggest providing location
      suggestions.push("I'm in San Jose");
      suggestions.push("I'm in the East Bay");
    }

    // Always offer to explore more
    if (suggestions.length < 3) {
      suggestions.push('What else is available?');
    }

    // Only show 2-3 suggestions
    const finalSuggestions = suggestions.slice(0, 3);
    if (finalSuggestions.length === 0) return;

