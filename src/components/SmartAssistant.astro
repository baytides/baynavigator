    if (lowerMsg.includes('food') || lowerResp.includes('calfresh') || lowerResp.includes('food')) {
      if (!location) suggestions.push('I live in San Francisco');
      suggestions.push('What are the income limits?');
      suggestions.push('Where can I apply?');
