---
import '../styles/global.css';
import LanguageSelector from '../components/LanguageSelector.astro';
import OfflineBanner from '../components/OfflineBanner.astro';
import PrintQR from '../components/PrintQR.astro';
import PWAInstallBanner from '../components/PWAInstallBanner.astro';
import SafetyExit from '../components/SafetyExit.astro';
import SkipLinks from '../components/SkipLinks.astro';
import Toast from '../components/Toast.astro';
import yaml from 'js-yaml';
import fs from 'fs';
import path from 'path';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
}

const {
  title,
  description = 'Free and low-cost resources across the San Francisco Bay Area',
  image = '/og-image.png',
  type = 'website',
  publishedTime,
  modifiedTime,
} = Astro.props;

const fullTitle = title === 'Home' ? 'Bay Navigator' : `${title} | Bay Navigator`;
const siteUrl = 'https://baynavigator.org';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const ogImageUrl = new URL(image, siteUrl).href;

// Load site config for Tor address
let onionAddress = '';
try {
  const configPath = path.join(process.cwd(), 'src/data/site-config.yml');
  const configContent = fs.readFileSync(configPath, 'utf8');
  const config = yaml.load(configContent) as { onion_address?: string };
  onionAddress = config?.onion_address || '';
} catch (e) {
  // Config file not found or invalid
}

// Structured data for organization
const organizationSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: 'Bay Tides',
  alternateName: 'Bay Navigator',
  url: siteUrl,
  logo: `${siteUrl}/assets/images/logo/logo.webp`,
  description:
    'Bay Tides is a 501(c)(3) nonprofit working to protect the San Francisco Bay. Bay Navigator connects Bay Area residents with free and low-cost programs.',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Redwood City',
    addressRegion: 'CA',
    addressCountry: 'US',
  },
  areaServed: {
    '@type': 'Place',
    name: 'San Francisco Bay Area',
  },
  sameAs: ['https://github.com/baytides/baynavigator', 'https://baytides.org'],
};

// Structured data for website
const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'Bay Navigator',
  url: siteUrl,
  description: description,
  publisher: {
    '@type': 'Organization',
    name: 'Bay Tides',
  },
  potentialAction: {
    '@type': 'SearchAction',
    target: {
      '@type': 'EntryPoint',
      urlTemplate: `${siteUrl}/directory?q={search_term_string}`,
    },
    'query-input': 'required name=search_term_string',
  },
};
---

<!doctype html>
<html lang="en" class="overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0097a7" />
    <meta name="robots" content="index, follow" />
    <meta
      name="googlebot"
      content="index, follow, max-video-preview:-1, max-image-preview:large, max-snippet:-1"
    />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Preconnect to external resources for faster loading -->
    <link rel="preconnect" href="https://baytidesstorage.blob.core.windows.net" crossorigin />
    <link rel="preconnect" href="https://nominatim.openstreetmap.org" crossorigin />
    <link rel="dns-prefetch" href="https://baytidesstorage.blob.core.windows.net" />
    <link rel="dns-prefetch" href="https://nominatim.openstreetmap.org" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/assets/images/favicons/favicon-96.webp"
    />
    <link rel="apple-touch-icon" href="/assets/images/favicons/apple-touch-icon.webp" />
    <link rel="manifest" href="/assets/images/favicons/site.webmanifest" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content="Bay Navigator - Free and low-cost resources for Bay Area residents"
    />
    <meta property="og:site_name" content="Bay Navigator" />
    <meta property="og:locale" content="en_US" />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta
      name="twitter:image:alt"
      content="Bay Navigator - Free and low-cost resources for Bay Area residents"
    />

    <!-- Additional SEO -->
    <meta name="author" content="Bay Tides" />
    <meta name="geo.region" content="US-CA" />
    <meta name="geo.placename" content="San Francisco Bay Area" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

    <title>{fullTitle}</title>

    <!-- i18n Client Script (load early for translations) -->
    <script src="/js/i18n-client.js" defer></script>

    <!-- Dark mode script (runs before render to prevent flash) -->
    <script is:inline>
      if (
        localStorage.getItem('theme') === 'dark' ||
        (!localStorage.getItem('theme') &&
          window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      }
      // Color blind mode (also runs early to prevent flash)
      if (localStorage.getItem('baynavigator_colorblind_mode') === 'true') {
        document.documentElement.classList.add('colorblind-mode');
      }
    </script>

    <!-- Text settings script (runs before render to prevent flash) -->
    <script is:inline>
      (function () {
        var saved = localStorage.getItem('textSettings');
        if (saved) {
          try {
            var settings = JSON.parse(saved);
            var root = document.documentElement;
            if (settings.textSize)
              root.style.setProperty(
                '--text-size-scale',
                (parseInt(settings.textSize) / 100).toString()
              );
            var lineHeightMap = { '1': '1.6', '2': '2', '3': '2.5' };
            var letterSpacingMap = { '1': '0em', '2': '0.05em', '3': '0.1em' };
            var wordSpacingMap = { '1': '0em', '2': '0.1em', '3': '0.2em' };
            if (settings.lineHeight)
              root.style.setProperty(
                '--text-line-height',
                lineHeightMap[settings.lineHeight] || '1.6'
              );
            if (settings.letterSpacing)
              root.style.setProperty(
                '--text-letter-spacing',
                letterSpacingMap[settings.letterSpacing] || '0em'
              );
            if (settings.wordSpacing)
              root.style.setProperty(
                '--text-word-spacing',
                wordSpacingMap[settings.wordSpacing] || '0em'
              );
            if (settings.simpleLanguage) root.classList.add('simple-language');
          } catch (e) {}
        }
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col overflow-x-hidden">
    <!-- Skip links for accessibility (WCAG 2.4.1) -->
    <SkipLinks />

    <!-- Official Banner -->
    <div class="official-banner">
      <div class="container-page flex items-center justify-between gap-2">
        <div class="flex items-center gap-2">
          <svg
            class="w-4 h-4 text-primary-700 dark:text-primary-300 hidden sm:block"
            fill="currentColor"
            viewBox="0 0 20 20"
            aria-hidden="true"
          >
            <path
              d="M10 2a8 8 0 100 16 8 8 0 000-16zM9 9a1 1 0 112 0v4a1 1 0 11-2 0V9zm1-3a1 1 0 100-2 1 1 0 000 2z"
            ></path>
          </svg>
          <span class="text-neutral-700 dark:text-neutral-300">
            <span class="hidden sm:inline"
              ><strong class="font-semibold">Bay Navigator</strong> is a community-maintained resource
              by</span
            >
            <span class="sm:hidden"><strong class="font-semibold">Bay Navigator</strong> by</span>
            <a href="https://baytides.org" class="font-medium">Bay Tides</a>
          </span>
        </div>
        {
          onionAddress && (
            <a
              href={`http://${onionAddress}`}
              class="flex items-center gap-1 sm:gap-1.5 text-xs text-purple-900 dark:text-purple-300 hover:underline font-medium flex-shrink-0"
              title="Access Bay Navigator via Tor for enhanced privacy"
            >
              <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z" />
              </svg>
              <span class="hidden sm:inline">.onion</span>
              <span class="sm:hidden">Tor</span>
            </a>
          )
        }
      </div>
    </div>

    <!-- Header -->
    <header
      class="bg-white dark:bg-neutral-900 border-b border-neutral-200 dark:border-neutral-700 sticky top-0 z-40"
    >
      <div class="container-page py-4">
        <nav class="flex items-center justify-between" aria-label="Main navigation">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-3 no-underline hover:no-underline">
            <img
              src="/assets/images/logo/logo.webp"
              alt="Bay Navigator"
              class="w-10 h-10 rounded-lg"
              width="40"
              height="40"
            />
            <span class="text-xl font-bold text-neutral-900 dark:text-white">Bay Navigator</span>
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-6">
            <a
              href="/"
              class="text-neutral-700 dark:text-neutral-300 hover:text-primary-700 dark:hover:text-primary-300 no-underline font-medium"
              >Home</a
            >
            <a
              href="/directory"
              class="text-neutral-700 dark:text-neutral-300 hover:text-primary-700 dark:hover:text-primary-300 no-underline font-medium"
              >Directory</a
            >
            <a
              href="/map"
              class="text-neutral-700 dark:text-neutral-300 hover:text-primary-700 dark:hover:text-primary-300 no-underline font-medium"
              >Map</a
            >
            <a
              href="/transit"
              class="text-neutral-700 dark:text-neutral-300 hover:text-primary-700 dark:hover:text-primary-300 no-underline font-medium"
              >Transit</a
            >
            <a
              href="/eligibility"
              class="text-neutral-700 dark:text-neutral-300 hover:text-primary-700 dark:hover:text-primary-300 no-underline font-medium"
              >Eligibility</a
            >
            <a
              href="/about"
              class="text-neutral-700 dark:text-neutral-300 hover:text-primary-700 dark:hover:text-primary-300 no-underline font-medium"
              >About</a
            >
            <a
              href="/favorites"
              class="text-neutral-700 dark:text-neutral-300 hover:text-primary-700 dark:hover:text-primary-300 no-underline font-medium inline-flex items-center gap-1"
              title="View saved programs"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                ></path>
              </svg>
              <span
                id="nav-favorites-count"
                class="hidden text-xs bg-red-500 text-white rounded-full min-w-[1.25rem] h-5 px-1 flex items-center justify-center font-medium"
                >0</span
              >
            </a>

            <!-- Text Settings -->
            <div class="relative">
              <button
                id="text-settings-toggle"
                type="button"
                class="p-2 rounded-lg text-neutral-600 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800"
                aria-label="Text settings"
                aria-expanded="false"
                aria-controls="text-settings-panel"
                data-tooltip="Adjust font size, line spacing, and more for easier reading"
                data-tooltip-position="bottom"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h8m-8 6h16"></path>
                </svg>
              </button>

              <!-- Text Settings Panel -->
              <div
                id="text-settings-panel"
                class="hidden absolute right-0 top-full mt-2 w-80 bg-white dark:bg-neutral-800 rounded-lg shadow-lg border border-neutral-200 dark:border-neutral-700 p-4 z-50"
                role="dialog"
                aria-labelledby="text-settings-title"
              >
                <div class="flex items-center justify-between mb-4">
                  <h3
                    id="text-settings-title"
                    class="text-lg font-semibold text-neutral-900 dark:text-white"
                  >
                    Text Settings
                  </h3>
                  <button
                    id="text-settings-reset"
                    type="button"
                    class="text-sm text-primary-700 dark:text-primary-300 hover:underline"
                  >
                    Reset
                  </button>
                </div>

                <p class="text-sm text-neutral-600 dark:text-neutral-400 mb-4">
                  Customize text appearance for easier reading.
                </p>

                <!-- Font Size -->
                <div class="mb-4">
                  <label
                    for="text-size-slider"
                    class="flex items-center justify-between text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2"
                  >
                    <span>Font Size</span>
                    <span id="text-size-value" class="text-neutral-600 dark:text-neutral-300"
                      >100%</span
                    >
                  </label>
                  <input
                    type="range"
                    id="text-size-slider"
                    min="80"
                    max="150"
                    value="100"
                    step="10"
                    class="w-full h-2 bg-neutral-200 dark:bg-neutral-700 rounded-lg appearance-none cursor-pointer accent-primary-700"
                    aria-describedby="text-size-desc"
                  />
                  <div id="text-size-desc" class="sr-only">Adjust font size from 80% to 150%</div>
                </div>

                <!-- Line Height -->
                <div class="mb-4">
                  <label
                    for="line-height-slider"
                    class="flex items-center justify-between text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2"
                  >
                    <span>Line Spacing</span>
                    <span id="line-height-value" class="text-neutral-600 dark:text-neutral-300"
                      >Normal</span
                    >
                  </label>
                  <input
                    type="range"
                    id="line-height-slider"
                    min="1"
                    max="3"
                    value="1"
                    step="1"
                    class="w-full h-2 bg-neutral-200 dark:bg-neutral-700 rounded-lg appearance-none cursor-pointer accent-primary-700"
                    aria-describedby="line-height-desc"
                  />
                  <div id="line-height-desc" class="sr-only">
                    Adjust line spacing: Normal, Wide, or Extra Wide
                  </div>
                </div>

                <!-- Letter Spacing -->
                <div class="mb-4">
                  <label
                    for="letter-spacing-slider"
                    class="flex items-center justify-between text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2"
                  >
                    <span>Letter Spacing</span>
                    <span id="letter-spacing-value" class="text-neutral-600 dark:text-neutral-300"
                      >Normal</span
                    >
                  </label>
                  <input
                    type="range"
                    id="letter-spacing-slider"
                    min="1"
                    max="3"
                    value="1"
                    step="1"
                    class="w-full h-2 bg-neutral-200 dark:bg-neutral-700 rounded-lg appearance-none cursor-pointer accent-primary-700"
                    aria-describedby="letter-spacing-desc"
                  />
                  <div id="letter-spacing-desc" class="sr-only">
                    Adjust letter spacing: Normal, Wide, or Extra Wide
                  </div>
                </div>

                <!-- Word Spacing -->
                <div class="mb-4">
                  <label
                    for="word-spacing-slider"
                    class="flex items-center justify-between text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2"
                  >
                    <span>Word Spacing</span>
                    <span id="word-spacing-value" class="text-neutral-600 dark:text-neutral-300"
                      >Normal</span
                    >
                  </label>
                  <input
                    type="range"
                    id="word-spacing-slider"
                    min="1"
                    max="3"
                    value="1"
                    step="1"
                    class="w-full h-2 bg-neutral-200 dark:bg-neutral-700 rounded-lg appearance-none cursor-pointer accent-primary-700"
                    aria-describedby="word-spacing-desc"
                  />
                  <div id="word-spacing-desc" class="sr-only">
                    Adjust word spacing: Normal, Wide, or Extra Wide
                  </div>
                </div>

                <!-- Simple Language Toggle (WCAG 3.1.5) -->
                <div class="mb-4 pt-4 border-t border-neutral-200 dark:border-neutral-700">
                  <div class="flex items-center justify-between">
                    <label
                      for="simple-language-toggle"
                      class="text-sm font-medium text-neutral-700 dark:text-neutral-300"
                    >
                      Simple Language
                      <span
                        class="block text-xs text-neutral-600 dark:text-neutral-300 font-normal mt-0.5"
                      >
                        Easier words, shorter sentences
                      </span>
                    </label>
                    <button
                      id="simple-language-toggle"
                      type="button"
                      role="switch"
                      aria-checked="false"
                      class="toggle-switch relative w-11 h-6 bg-neutral-300 dark:bg-neutral-600 rounded-full transition-colors"
                      aria-describedby="simple-language-desc"
                    >
                      <span
                        class="absolute left-0.5 top-0.5 w-5 h-5 bg-white rounded-full shadow-sm transition-transform"
                      ></span>
                    </button>
                  </div>
                  <div id="simple-language-desc" class="sr-only">
                    Toggle simple language mode for easier reading. When enabled, complex terms are
                    replaced with simpler alternatives.
                  </div>
                </div>

                <!-- Color Blind Mode Toggle -->
                <div class="mb-4">
                  <div class="flex items-center justify-between">
                    <label
                      for="colorblind-toggle"
                      class="text-sm font-medium text-neutral-700 dark:text-neutral-300"
                    >
                      Color Blind Mode
                      <span
                        class="block text-xs text-neutral-600 dark:text-neutral-300 font-normal mt-0.5"
                      >
                        Add patterns to colors
                      </span>
                    </label>
                    <button
                      id="colorblind-toggle"
                      type="button"
                      role="switch"
                      aria-checked="false"
                      class="toggle-switch relative w-11 h-6 bg-neutral-300 dark:bg-neutral-600 rounded-full transition-colors"
                      aria-describedby="colorblind-desc"
                    >
                      <span
                        class="absolute left-0.5 top-0.5 w-5 h-5 bg-white rounded-full shadow-sm transition-transform"
                      ></span>
                    </button>
                  </div>
                  <div id="colorblind-desc" class="sr-only">
                    Enable color blind mode. Adds patterns and shapes alongside colors to help
                    distinguish categories without relying on color alone.
                  </div>
                </div>

                <!-- Quick Exit Toggle (Safety Feature) -->
                <div class="mb-2">
                  <div class="flex items-center justify-between">
                    <label
                      for="quick-exit-toggle"
                      class="text-sm font-medium text-neutral-700 dark:text-neutral-300"
                    >
                      Quick Exit
                      <span
                        class="block text-xs text-neutral-600 dark:text-neutral-300 font-normal mt-0.5"
                      >
                        Press Esc to leave site quickly
                      </span>
                    </label>
                    <button
                      id="quick-exit-toggle"
                      type="button"
                      role="switch"
                      aria-checked="false"
                      class="toggle-switch relative w-11 h-6 bg-neutral-300 dark:bg-neutral-600 rounded-full transition-colors"
                      aria-describedby="quick-exit-desc"
                    >
                      <span
                        class="absolute left-0.5 top-0.5 w-5 h-5 bg-white rounded-full shadow-sm transition-transform"
                      ></span>
                    </button>
                  </div>
                  <div id="quick-exit-desc" class="sr-only">
                    Enable quick exit mode. When enabled, pressing Escape will immediately leave
                    this site and go to a safe page.
                  </div>
                </div>

                <p class="text-xs text-neutral-600 dark:text-neutral-300 mt-4">
                  Settings are saved automatically.
                </p>
              </div>
            </div>

            <!-- Language Selector -->
            <LanguageSelector />

            <!-- Theme Toggle -->
            <button
              id="theme-toggle"
              type="button"
              class="p-2 rounded-lg text-neutral-600 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800"
              aria-label="Toggle dark mode"
              data-tooltip="Switch between light and dark themes"
              data-tooltip-position="bottom"
            >
              <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
                  clip-rule="evenodd"></path>
              </svg>
              <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
              </svg>
            </button>
          </div>

          <!-- Mobile Menu Button -->
          <button
            id="mobile-menu-btn"
            type="button"
            class="md:hidden p-2 rounded-lg text-neutral-600 dark:text-neutral-300 hover:bg-neutral-100 dark:hover:bg-neutral-800"
            aria-label="Open menu"
            aria-expanded="false"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </nav>

        <!-- Mobile Navigation -->
        <div
          id="mobile-menu"
          class="hidden md:hidden mt-4 pb-4 border-t border-neutral-200 dark:border-neutral-700 pt-4"
        >
          <div class="flex flex-col gap-3">
            <a
              href="/"
              class="text-neutral-700 dark:text-neutral-300 hover:text-primary-700 dark:hover:text-primary-300 no-underline font-medium py-2"
              >Home</a
            >
            <a
              href="/directory"
              class="text-neutral-700 dark:text-neutral-300 hover:text-primary-700 dark:hover:text-primary-300 no-underline font-medium py-2"
              >Directory</a
            >
