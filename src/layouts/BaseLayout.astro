      // Simple language data and state
      let simpleLanguageData: Record<string, string> | null = null;
      const originalTextMap = new Map<Node, string>();

      // Load simple language data (cached in memory)
      async function loadSimpleLanguageData() {
        if (simpleLanguageData) return simpleLanguageData;

        try {
          const response = await fetch('/data/simple-language.json');
          if (response.ok) {
            const data = await response.json();
            simpleLanguageData = data.simplifications || {};
            return simpleLanguageData;
          }
        } catch (e) {
          console.error('Failed to load simple language data:', e);
        }
        return {};
      }

      // Apply simple language replacements to text nodes
      async function applySimpleLanguage() {
        const data = await loadSimpleLanguageData();
        if (!data || Object.keys(data).length === 0) return;

        // Build regex pattern for all complex words
        const words = Object.keys(data).sort((a, b) => b.length - a.length); // Longer words first
        const pattern = new RegExp(`\\b(${words.join('|')})\\b`, 'gi');

        // Walk through text nodes in main content only
        const main = document.querySelector('main');
        if (!main) return;

        const walker = document.createTreeWalker(main, NodeFilter.SHOW_TEXT, {
          acceptNode: (node) => {
            // Skip script, style, and already processed nodes
            const parent = node.parentElement;
            if (!parent) return NodeFilter.FILTER_REJECT;
            const tagName = parent.tagName.toLowerCase();
            if (['script', 'style', 'code', 'pre', 'abbr'].includes(tagName)) {
              return NodeFilter.FILTER_REJECT;
            }
            // Skip if already has simple language class
            if (
              parent.classList.contains('text-simple') ||
              parent.classList.contains('text-normal')
            ) {
              return NodeFilter.FILTER_REJECT;
            }
            return NodeFilter.FILTER_ACCEPT;
          },
        });

        const textNodes: Text[] = [];
        let node;
        while ((node = walker.nextNode())) {
          textNodes.push(node as Text);
        }

        // Replace text in each node
        for (const textNode of textNodes) {
          const original = textNode.textContent || '';
          if (!pattern.test(original)) continue;

          // Store original text for restoration
          if (!originalTextMap.has(textNode)) {
            originalTextMap.set(textNode, original);
          }

          // Replace complex words with simple alternatives
          const simplified = original.replace(pattern, (match) => {
            const lower = match.toLowerCase();
            const simple = data[lower];
            if (simple) {
              // Preserve original capitalization
              if (match[0] === match[0].toUpperCase()) {
                return simple.charAt(0).toUpperCase() + simple.slice(1);
              }
              return simple;
            }
            return match;
          });

          textNode.textContent = simplified;
        }
      }

      // Restore original text when simple language is disabled
      function restoreOriginalText() {
        for (const [node, original] of originalTextMap) {
          if (node.textContent !== original) {
            node.textContent = original;
          }
        }
      }

      // Apply simple language on page load if enabled
      async function initSimpleLanguage() {
        if (document.documentElement.classList.contains('simple-language')) {
          await applySimpleLanguage();
        }
      }

      // Text settings
      function setupTextSettings() {
        const toggle = document.getElementById('text-settings-toggle');
        const panel = document.getElementById('text-settings-panel');
        const resetBtn = document.getElementById('text-settings-reset');
        const simpleLanguageToggle = document.getElementById('simple-language-toggle');

        // Sliders
        const textSizeSlider = document.getElementById('text-size-slider') as HTMLInputElement;
        const lineHeightSlider = document.getElementById('line-height-slider') as HTMLInputElement;
        const letterSpacingSlider = document.getElementById(
          'letter-spacing-slider'
        ) as HTMLInputElement;
        const wordSpacingSlider = document.getElementById(
          'word-spacing-slider'
        ) as HTMLInputElement;

        // Value displays
        const textSizeValue = document.getElementById('text-size-value');
        const lineHeightValue = document.getElementById('line-height-value');
        const letterSpacingValue = document.getElementById('letter-spacing-value');
        const wordSpacingValue = document.getElementById('word-spacing-value');

        // Mapping functions
        const lineHeightMap: Record<string, { label: string; value: string }> = {
          '1': { label: 'Normal', value: '1.6' },
          '2': { label: 'Wide', value: '2' },
          '3': { label: 'Extra Wide', value: '2.5' },
        };

        const letterSpacingMap: Record<string, { label: string; value: string }> = {
          '1': { label: 'Normal', value: '0em' },
          '2': { label: 'Wide', value: '0.05em' },
          '3': { label: 'Extra Wide', value: '0.1em' },
        };

        const wordSpacingMap: Record<string, { label: string; value: string }> = {
          '1': { label: 'Normal', value: '0em' },
          '2': { label: 'Wide', value: '0.1em' },
          '3': { label: 'Extra Wide', value: '0.2em' },
        };

        // Apply settings to CSS variables
        function applySettings() {
          const root = document.documentElement;

          // Font size
          const textSize = parseInt(textSizeSlider?.value || '100');
          root.style.setProperty('--text-size-scale', (textSize / 100).toString());
          if (textSizeValue) textSizeValue.textContent = `${textSize}%`;

          // Line height
          const lineHeightOption = lineHeightMap[lineHeightSlider?.value || '1'];
          root.style.setProperty('--text-line-height', lineHeightOption.value);
          if (lineHeightValue) lineHeightValue.textContent = lineHeightOption.label;

          // Letter spacing
          const letterSpacingOption = letterSpacingMap[letterSpacingSlider?.value || '1'];
          root.style.setProperty('--text-letter-spacing', letterSpacingOption.value);
          if (letterSpacingValue) letterSpacingValue.textContent = letterSpacingOption.label;

          // Word spacing
          const wordSpacingOption = wordSpacingMap[wordSpacingSlider?.value || '1'];
          root.style.setProperty('--text-word-spacing', wordSpacingOption.value);
          if (wordSpacingValue) wordSpacingValue.textContent = wordSpacingOption.label;
        }

        // Save settings to localStorage
        function saveSettings() {
          const isSimpleLanguage = document.documentElement.classList.contains('simple-language');
          const settings = {
            textSize: textSizeSlider?.value || '100',
            lineHeight: lineHeightSlider?.value || '1',
            letterSpacing: letterSpacingSlider?.value || '1',
            wordSpacing: wordSpacingSlider?.value || '1',
            simpleLanguage: isSimpleLanguage,
          };
          localStorage.setItem('textSettings', JSON.stringify(settings));
        }

        // Update simple language toggle UI
        function updateSimpleLanguageToggle() {
          const isEnabled = document.documentElement.classList.contains('simple-language');
          if (simpleLanguageToggle) {
            simpleLanguageToggle.setAttribute('aria-checked', String(isEnabled));
            if (isEnabled) {
              simpleLanguageToggle.classList.add('bg-primary-600');
              simpleLanguageToggle.classList.remove('bg-neutral-300', 'dark:bg-neutral-600');
              const thumb = simpleLanguageToggle.querySelector('span');
              if (thumb) thumb.style.transform = 'translateX(1.25rem)';
            } else {
              simpleLanguageToggle.classList.remove('bg-primary-600');
              simpleLanguageToggle.classList.add('bg-neutral-300', 'dark:bg-neutral-600');
              const thumb = simpleLanguageToggle.querySelector('span');
              if (thumb) thumb.style.transform = 'translateX(0)';
            }
          }
        }

        // Load saved settings
        function loadSettings() {
          const saved = localStorage.getItem('textSettings');
          if (saved) {
            try {
              const settings = JSON.parse(saved);
              if (textSizeSlider && settings.textSize) textSizeSlider.value = settings.textSize;
              if (lineHeightSlider && settings.lineHeight)
                lineHeightSlider.value = settings.lineHeight;
              if (letterSpacingSlider && settings.letterSpacing)
                letterSpacingSlider.value = settings.letterSpacing;
              if (wordSpacingSlider && settings.wordSpacing)
                wordSpacingSlider.value = settings.wordSpacing;
              // Simple language is already applied via the inline script, just update UI
              updateSimpleLanguageToggle();
            } catch (e) {
              console.error('Error loading text settings:', e);
            }
          }
          applySettings();
        }

        // Toggle panel visibility
        toggle?.addEventListener('click', () => {
          const isOpen = !panel?.classList.contains('hidden');
          panel?.classList.toggle('hidden');
          toggle.setAttribute('aria-expanded', String(!isOpen));
        });

        // Close panel when clicking outside
        document.addEventListener('click', (e) => {
          if (!toggle?.contains(e.target as Node) && !panel?.contains(e.target as Node)) {
            panel?.classList.add('hidden');
            toggle?.setAttribute('aria-expanded', 'false');
          }
        });

        // Close on Escape key
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && !panel?.classList.contains('hidden')) {
            panel?.classList.add('hidden');
            toggle?.setAttribute('aria-expanded', 'false');
            toggle?.focus();
          }
        });

        // Slider event listeners
        [textSizeSlider, lineHeightSlider, letterSpacingSlider, wordSpacingSlider].forEach(
          (slider) => {
            slider?.addEventListener('input', () => {
              applySettings();
              saveSettings();
            });
          }
        );

        // Simple language toggle
        simpleLanguageToggle?.addEventListener('click', async () => {
          document.documentElement.classList.toggle('simple-language');
          updateSimpleLanguageToggle();
          saveSettings();

          // Apply or remove simple language replacements
          const isEnabled = document.documentElement.classList.contains('simple-language');
          if (isEnabled) {
            await applySimpleLanguage();
          } else {
            restoreOriginalText();
          }
        });

        // Color blind mode toggle
        const colorblindToggle = document.getElementById('colorblind-toggle');
        const COLORBLIND_KEY = 'baynavigator_colorblind_mode';

        function updateColorblindToggle() {
          const isEnabled = localStorage.getItem(COLORBLIND_KEY) === 'true';
          if (colorblindToggle) {
            colorblindToggle.setAttribute('aria-checked', String(isEnabled));
            if (isEnabled) {
              colorblindToggle.classList.add('bg-primary-600');
              colorblindToggle.classList.remove('bg-neutral-300', 'dark:bg-neutral-600');
              const thumb = colorblindToggle.querySelector('span');
              if (thumb) (thumb as HTMLElement).style.transform = 'translateX(1.25rem)';
              document.documentElement.classList.add('colorblind-mode');
            } else {
              colorblindToggle.classList.remove('bg-primary-600');
              colorblindToggle.classList.add('bg-neutral-300', 'dark:bg-neutral-600');
              const thumb = colorblindToggle.querySelector('span');
              if (thumb) (thumb as HTMLElement).style.transform = 'translateX(0)';
              document.documentElement.classList.remove('colorblind-mode');
            }
          }
        }

        colorblindToggle?.addEventListener('click', () => {
          const isEnabled = localStorage.getItem(COLORBLIND_KEY) === 'true';
          localStorage.setItem(COLORBLIND_KEY, String(!isEnabled));
          updateColorblindToggle();
          // Notify other components
          window.dispatchEvent(new Event('colorblind-mode-changed'));
        });

        // Initialize colorblind toggle state
        updateColorblindToggle();

        // Quick exit toggle
        const quickExitToggle = document.getElementById('quick-exit-toggle');
        const QUICK_EXIT_KEY = 'baynavigator_quick_exit_enabled';

        function updateQuickExitToggle() {
          const isEnabled = localStorage.getItem(QUICK_EXIT_KEY) === 'true';
          if (quickExitToggle) {
            quickExitToggle.setAttribute('aria-checked', String(isEnabled));
            if (isEnabled) {
              quickExitToggle.classList.add('bg-primary-600');
              quickExitToggle.classList.remove('bg-neutral-300', 'dark:bg-neutral-600');
              const thumb = quickExitToggle.querySelector('span');
              if (thumb) (thumb as HTMLElement).style.transform = 'translateX(1.25rem)';
            } else {
              quickExitToggle.classList.remove('bg-primary-600');
              quickExitToggle.classList.add('bg-neutral-300', 'dark:bg-neutral-600');
              const thumb = quickExitToggle.querySelector('span');
              if (thumb) (thumb as HTMLElement).style.transform = 'translateX(0)';
            }
          }
        }

        quickExitToggle?.addEventListener('click', () => {
          const isEnabled = localStorage.getItem(QUICK_EXIT_KEY) === 'true';
          localStorage.setItem(QUICK_EXIT_KEY, String(!isEnabled));
          updateQuickExitToggle();
          // Notify the SafetyExit component
          window.dispatchEvent(new Event('quick-exit-setting-changed'));
        });

        // Initialize quick exit toggle state
        updateQuickExitToggle();

        // Reset button
        resetBtn?.addEventListener('click', () => {
          if (textSizeSlider) textSizeSlider.value = '100';
          if (lineHeightSlider) lineHeightSlider.value = '1';
          if (letterSpacingSlider) letterSpacingSlider.value = '1';
          if (wordSpacingSlider) wordSpacingSlider.value = '1';
          document.documentElement.classList.remove('simple-language');
          updateSimpleLanguageToggle();
          // Reset colorblind mode
          localStorage.removeItem(COLORBLIND_KEY);
          document.documentElement.classList.remove('colorblind-mode');
          updateColorblindToggle();
          // Don't reset quick exit - it's a safety feature
          applySettings();
          saveSettings();
        });

        // Load settings on page load
        loadSettings();
      }

      // Mobile language selector
      function setupMobileLanguageSelector() {
        const STORAGE_KEY = 'baynavigator_locale';
        const buttons = document.querySelectorAll('.mobile-lang-btn');

        function getCurrentLocale(): string {
          try {
            const stored = localStorage.getItem(STORAGE_KEY);
            if (stored && (stored === 'en' || stored === 'es')) {
              return stored;
            }
          } catch {
            // localStorage not available
          }
          const browserLang = navigator.language?.split('-')[0];
          if (browserLang === 'es') return 'es';
          return 'en';
        }

        function updateButtonStates(locale: string) {
          buttons.forEach((btn) => {
            const btnLocale = btn.getAttribute('data-locale');
            if (btnLocale === locale) {
              btn.classList.add('bg-primary-600', 'text-white');
              btn.classList.remove(
                'bg-neutral-100',
                'dark:bg-neutral-800',
                'text-neutral-700',
                'dark:text-neutral-300'
              );
            } else {
              btn.classList.remove('bg-primary-600', 'text-white');
              btn.classList.add(
                'bg-neutral-100',
                'dark:bg-neutral-800',
                'text-neutral-700',
                'dark:text-neutral-300'
              );
            }
          });
        }

        // Initialize button states
        updateButtonStates(getCurrentLocale());

        // Handle button clicks
        buttons.forEach((btn) => {
          btn.addEventListener('click', () => {
            const locale = btn.getAttribute('data-locale');
            if (!locale) return;

            try {
              localStorage.setItem(STORAGE_KEY, locale);
            } catch {
              // localStorage not available
            }

            document.documentElement.lang = locale;
            updateButtonStates(locale);

            // Reload page to apply translations
            window.location.reload();
          });
        });
      }

      setupThemeToggle();
      setupMobileMenu();
      setupMobileLanguageSelector();
      setupTextSettings();
      initSimpleLanguage();
