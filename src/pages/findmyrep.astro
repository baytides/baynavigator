---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
---

<BaseLayout
  title="Find My Representative"
  description="Find your California State and U.S. Congressional representatives by entering your address."
>
  <section class="section">
    <div class="container-page">
      <div class="max-w-2xl mx-auto">
        <Breadcrumb items={[{ label: 'Find My Rep' }]} />

        <!-- Header -->
        <div class="text-center mb-8">
          <h1 class="text-3xl md:text-4xl font-bold text-neutral-900 dark:text-white mb-3">
            Find My Representative
          </h1>
          <p class="text-lg text-neutral-600 dark:text-neutral-300">
            Enter your California address to find your elected representatives
          </p>
        </div>

        <!-- Search Form -->
        <div id="search-form" class="bg-white dark:bg-neutral-800 rounded-xl shadow-lg p-6 mb-6 border border-neutral-200 dark:border-neutral-700">
          <div class="space-y-4">
            <div>
              <label for="street" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
                Street Address <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="street"
                placeholder="123 Main Street"
                class="w-full px-4 py-2 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-white dark:bg-neutral-700 text-neutral-900 dark:text-white placeholder-neutral-400 focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                required
              />
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <label for="city" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
                  City <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="city"
                  placeholder="San Francisco"
                  class="w-full px-4 py-2 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-white dark:bg-neutral-700 text-neutral-900 dark:text-white placeholder-neutral-400 focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  required
                />
              </div>
              <div>
                <label for="zip" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
                  ZIP Code <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="zip"
                  placeholder="94102"
                  maxlength="5"
                  pattern="[0-9]{5}"
                  class="w-full px-4 py-2 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-white dark:bg-neutral-700 text-neutral-900 dark:text-white placeholder-neutral-400 focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  required
                />
              </div>
            </div>

            <div id="error-message" class="hidden text-red-600 dark:text-red-400 text-sm bg-red-50 dark:bg-red-900/20 p-3 rounded-lg">
            </div>

            <button
              id="find-btn"
              type="button"
              class="w-full bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-6 rounded-lg transition-colors flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              Find My Representatives
            </button>
          </div>
        </div>

        <!-- Loading State -->
        <div id="loading" class="hidden bg-white dark:bg-neutral-800 rounded-xl shadow-lg p-8 text-center border border-neutral-200 dark:border-neutral-700">
          <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600 mx-auto mb-4"></div>
          <p class="text-neutral-600 dark:text-neutral-300">Looking up your representatives...</p>
        </div>

        <!-- Results -->
        <div id="results" class="hidden space-y-4">
          <!-- Address Confirmation -->
          <div id="address-card" class="bg-neutral-100 dark:bg-neutral-800 rounded-xl p-4 border border-neutral-200 dark:border-neutral-700">
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-neutral-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span id="address-text" class="text-neutral-700 dark:text-neutral-300"></span>
            </div>
          </div>

          <!-- U.S. Congress Section -->
          <div class="bg-white dark:bg-neutral-800 rounded-xl shadow-lg overflow-hidden border border-neutral-200 dark:border-neutral-700">
            <div class="bg-blue-600 dark:bg-blue-700 px-4 py-3">
              <h2 class="text-lg font-semibold text-white flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"/>
                </svg>
                U.S. Congress
              </h2>
            </div>
            <div id="congress-results" class="divide-y divide-neutral-200 dark:divide-neutral-700">
              <!-- Populated by JS -->
            </div>
          </div>

          <!-- California Legislature Section -->
          <div class="bg-white dark:bg-neutral-800 rounded-xl shadow-lg overflow-hidden border border-neutral-200 dark:border-neutral-700">
            <div class="bg-amber-600 dark:bg-amber-700 px-4 py-3">
              <h2 class="text-lg font-semibold text-white flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
                California State Legislature
              </h2>
            </div>
            <div id="state-results" class="divide-y divide-neutral-200 dark:divide-neutral-700">
              <!-- Populated by JS -->
            </div>
          </div>

          <!-- County Board of Supervisors Section -->
          <div id="county-section" class="hidden bg-white dark:bg-neutral-800 rounded-xl shadow-lg overflow-hidden border border-neutral-200 dark:border-neutral-700">
            <div class="bg-green-600 dark:bg-green-700 px-4 py-3">
              <h2 class="text-lg font-semibold text-white flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                County Board of Supervisors
              </h2>
            </div>
            <div id="county-results" class="divide-y divide-neutral-200 dark:divide-neutral-700">
              <!-- Populated by JS -->
            </div>
          </div>

          <!-- City Council Section -->
          <div id="city-section" class="hidden bg-white dark:bg-neutral-800 rounded-xl shadow-lg overflow-hidden border border-neutral-200 dark:border-neutral-700">
            <div class="bg-purple-600 dark:bg-purple-700 px-4 py-3">
              <h2 class="text-lg font-semibold text-white flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
                <span id="city-section-title">City Council</span>
              </h2>
            </div>
            <div id="city-results" class="divide-y divide-neutral-200 dark:divide-neutral-700">
              <!-- Populated by JS -->
            </div>
          </div>

          <!-- Search Again Button -->
          <button
            id="search-again-btn"
            type="button"
            class="w-full bg-neutral-200 dark:bg-neutral-700 hover:bg-neutral-300 dark:hover:bg-neutral-600 text-neutral-700 dark:text-neutral-200 font-medium py-3 px-6 rounded-lg transition-colors"
          >
            Search Another Address
          </button>
        </div>

        <!-- Disclaimer -->
        <p class="text-xs text-neutral-600 dark:text-neutral-300 text-center mt-6">
          This tool is for informational purposes only. To accurately determine your district, please contact your local
          <a href="https://www.sos.ca.gov/elections/voting-resources/county-elections-offices/" target="_blank" rel="noopener" class="underline hover:text-primary-600">county registrar or elections department</a>.
        </p>
      </div>
    </div>
  </section>

  <script>
    const streetInput = document.getElementById('street') as HTMLInputElement;
    const cityInput = document.getElementById('city') as HTMLInputElement;
    const zipInput = document.getElementById('zip') as HTMLInputElement;
    const findBtn = document.getElementById('find-btn') as HTMLButtonElement;
    const searchForm = document.getElementById('search-form') as HTMLDivElement;
    const loading = document.getElementById('loading') as HTMLDivElement;
    const results = document.getElementById('results') as HTMLDivElement;
    const errorMessage = document.getElementById('error-message') as HTMLDivElement;
    const addressText = document.getElementById('address-text') as HTMLSpanElement;
    const congressResults = document.getElementById('congress-results') as HTMLDivElement;
    const stateResults = document.getElementById('state-results') as HTMLDivElement;
    const countySection = document.getElementById('county-section') as HTMLDivElement;
    const countyResults = document.getElementById('county-results') as HTMLDivElement;
    const citySection = document.getElementById('city-section') as HTMLDivElement;
    const citySectionTitle = document.getElementById('city-section-title') as HTMLSpanElement;
    const cityResults = document.getElementById('city-results') as HTMLDivElement;
    const searchAgainBtn = document.getElementById('search-again-btn') as HTMLButtonElement;

    const CONGRESS_API = 'https://baytides-link-checker.azurewebsites.net/api/congress-lookup';

    // Allow Enter key to submit
    [streetInput, cityInput, zipInput].forEach(input => {
      input.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') findReps();
      });
    });

    findBtn.addEventListener('click', findReps);
    searchAgainBtn.addEventListener('click', resetForm);

    function showError(message: string) {
      errorMessage.textContent = message;
      errorMessage.classList.remove('hidden');
    }

    function hideError() {
      errorMessage.classList.add('hidden');
    }

    function resetForm() {
      results.classList.add('hidden');
      countySection.classList.add('hidden');
      citySection.classList.add('hidden');
      searchForm.classList.remove('hidden');
      streetInput.focus();
    }

    interface CongressMember {
      name: string;
      party: string;
      partyAbbrev: string;
      chamber: string;
      district?: number;
      imageUrl?: string;
      officialWebsite?: string;
      startYear?: number;
      nextElection?: number;
      addressInformation?: {
        phoneNumber?: string;
        officeAddress?: string;
      };
    }

    function renderRepCard(member: CongressMember, districtLabel: string): string {
      const partyClass = member.partyAbbrev === 'D' ? 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200' :
                        member.partyAbbrev === 'R' ? 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200' :
                        'bg-neutral-100 text-neutral-800 dark:bg-neutral-700 dark:text-neutral-200';

      const termInfo = member.startYear ? `Since ${member.startYear}` : '';
      const electionInfo = member.nextElection ? `Up for re-election ${member.nextElection}` : '';

      return `
        <div class="p-4">
          <div class="text-sm text-neutral-600 dark:text-neutral-300 mb-2">${districtLabel}</div>
          <div class="flex gap-4">
            ${member.imageUrl ? `
              <img
                src="${member.imageUrl}"
                alt="Photo of ${member.name}"
                class="w-20 h-24 object-cover rounded-lg flex-shrink-0"
                onerror="this.style.display='none'"
              />
            ` : `
              <div class="w-20 h-24 bg-neutral-200 dark:bg-neutral-700 rounded-lg flex-shrink-0 flex items-center justify-center">
                <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
            `}
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 flex-wrap">
                <span class="font-semibold text-neutral-900 dark:text-white">${member.name}</span>
                <span class="text-xs px-2 py-0.5 rounded-full ${partyClass}">${member.partyAbbrev}</span>
              </div>
              ${member.officialWebsite ? `
                <a href="${member.officialWebsite}" target="_blank" rel="noopener" class="text-sm text-primary-700 dark:text-primary-300 hover:underline block mt-1 truncate">
                  ${member.officialWebsite.replace('https://', '').replace('http://', '')}
                </a>
              ` : ''}
              ${termInfo || electionInfo ? `
                <div class="text-sm text-neutral-600 dark:text-neutral-300 mt-2 space-y-0.5">
                  ${termInfo ? `<div>${termInfo}</div>` : ''}
                  ${electionInfo ? `<div>${electionInfo}</div>` : ''}
                </div>
              ` : ''}
              ${member.addressInformation?.phoneNumber ? `
                <div class="text-sm text-neutral-600 dark:text-neutral-300 mt-2">
                  <a href="tel:${member.addressInformation.phoneNumber}" class="hover:text-primary-600 dark:hover:text-primary-400">
                    ${member.addressInformation.phoneNumber}
                  </a>
                </div>
              ` : ''}
            </div>
          </div>
        </div>
      `;
    }

    interface StateRepData {
      name: string;
      party: string;
      partyAbbrev: string;
      officialWebsite: string;
      photoUrl?: string;
      photoUrlFallbacks?: string[];
      termLength: string;
      error?: string;
    }

    interface CountySupervisorData {
      county: string;
      countyFips: string;
      district: number;
      name: string;
      website: string;
      phone: string | null;
      error?: string;
    }

    interface CityCouncilMember {
      seat: string;
      seatNumber: number | string | null;
      name: string;
      website?: string;
      phone?: string;
      photoUrl?: string;
    }

    interface CityCouncilData {
      city: string;
      type: string;
      website: string;
      placeGeoid: string;
      district?: number;
      members: CityCouncilMember[];
      note?: string;
      error?: string;
    }

    function renderCountySupervisorCard(data: CountySupervisorData): string {
      if (data.error) {
        return `
          <div class="p-4">
            <div class="text-neutral-600 dark:text-neutral-300">Supervisor information not available for this county</div>
          </div>
        `;
      }

      return `
        <div class="p-4">
          <div class="text-sm text-neutral-600 dark:text-neutral-300 mb-2">${data.county} - District ${data.district}</div>
          <div class="flex gap-4">
            <div class="w-20 h-24 bg-neutral-200 dark:bg-neutral-700 rounded-lg flex-shrink-0 flex items-center justify-center">
              <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 flex-wrap">
                <span class="font-semibold text-neutral-900 dark:text-white">${data.name}</span>
              </div>
              ${data.website ? `
                <a href="${data.website}" target="_blank" rel="noopener" class="text-sm text-primary-700 dark:text-primary-300 hover:underline block mt-1">
                  Official Website
                </a>
              ` : ''}
              ${data.phone ? `
                <div class="text-sm text-neutral-600 dark:text-neutral-300 mt-2">
                  <a href="tel:${data.phone}" class="hover:text-primary-600 dark:hover:text-primary-400">
                    ${data.phone}
                  </a>
                </div>
              ` : ''}
            </div>
          </div>
        </div>
      `;
    }

    function renderCityCouncilCard(member: CityCouncilMember): string {
      const placeholderHtml = `
        <div class="w-20 h-24 bg-neutral-200 dark:bg-neutral-700 rounded-lg flex-shrink-0 flex items-center justify-center">
          <svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>`;

      return `
        <div class="p-4">
          <div class="text-sm text-neutral-600 dark:text-neutral-300 mb-2">${member.seat}</div>
          <div class="flex gap-4">
            ${member.photoUrl ? `
              <img
                src="${member.photoUrl}"
                alt="${member.name}"
                class="w-20 h-24 object-cover rounded-lg flex-shrink-0"
                onerror="this.outerHTML='${placeholderHtml.replace(/'/g, "\\'").replace(/\n/g, '')}'"
              />
            ` : placeholderHtml}
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 flex-wrap">
                <span class="font-semibold text-neutral-900 dark:text-white">${member.name}</span>
              </div>
              ${member.website ? `
                <a href="${member.website}" target="_blank" rel="noopener" class="text-sm text-primary-700 dark:text-primary-300 hover:underline block mt-1">
                  Official Website
                </a>
              ` : ''}
              ${member.phone ? `
                <div class="text-sm text-neutral-600 dark:text-neutral-300 mt-2">
                  <a href="tel:${member.phone}" class="hover:text-primary-600 dark:hover:text-primary-400">
                    ${member.phone}
                  </a>
                </div>
              ` : ''}
            </div>
          </div>
        </div>
      `;
    }

    function renderCityCouncilSection(data: CityCouncilData): string {
      if (data.error) {
        return `
          <div class="p-4">
            <div class="text-neutral-600 dark:text-neutral-300">${data.note || 'City council information not available'}</div>
          </div>
        `;
      }

      let html = '';
      for (const member of data.members) {
        html += renderCityCouncilCard(member);
      }

      // Add note if present
      if (data.note) {
        html += `
          <div class="p-4 bg-neutral-50 dark:bg-neutral-900/50 text-sm text-neutral-600 dark:text-neutral-300">
            ${data.note}
          </div>
        `;
      }

      return html;
    }

    // Store fallback URLs for state reps to try on image error
    const stateRepFallbacks: Map<string, string[]> = new Map();

    function renderStateRepCardFromApi(data: StateRepData, districtLabel: string): string {
      if (data.error) {
        return `
          <div class="p-4">
            <div class="text-sm text-neutral-600 dark:text-neutral-300 mb-2">${districtLabel}</div>
            <div class="text-neutral-600 dark:text-neutral-300">Representative information not available</div>
          </div>
        `;
      }

      const partyClass = data.partyAbbrev === 'D' ? 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200' :
                        data.partyAbbrev === 'R' ? 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200' :
                        'bg-neutral-100 text-neutral-800 dark:bg-neutral-700 dark:text-neutral-200';

      // Store fallbacks for this rep (use name as key)
      if (data.photoUrlFallbacks && data.photoUrlFallbacks.length > 0) {
        stateRepFallbacks.set(data.name, [...data.photoUrlFallbacks]);
      }

      const placeholderHtml = `<div class='w-20 h-24 bg-neutral-200 dark:bg-neutral-700 rounded-lg flex-shrink-0 flex items-center justify-center'><svg class='w-8 h-8 text-neutral-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z'/></svg></div>`;

      return `
        <div class="p-4">
          <div class="text-sm text-neutral-600 dark:text-neutral-300 mb-2">${districtLabel}</div>
          <div class="flex gap-4">
            ${data.photoUrl ? `
              <img
                src="${data.photoUrl}"
                alt="Photo of ${data.name}"
                data-rep-name="${data.name}"
                class="w-20 h-24 object-cover rounded-lg flex-shrink-0 state-rep-photo"
                onerror="tryNextPhoto(this)"
              />
            ` : placeholderHtml}
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 flex-wrap">
                <span class="font-semibold text-neutral-900 dark:text-white">${data.name}</span>
                <span class="text-xs px-2 py-0.5 rounded-full ${partyClass}">${data.partyAbbrev}</span>
              </div>
              <a href="${data.officialWebsite}" target="_blank" rel="noopener" class="text-sm text-primary-700 dark:text-primary-300 hover:underline block mt-1">
                Official Website
              </a>
              <div class="text-sm text-neutral-600 dark:text-neutral-300 mt-2">
                ${data.termLength}
              </div>
            </div>
          </div>
        </div>
      `;
    }

    // Try fallback photo URLs for state reps
    function tryNextPhoto(img: HTMLImageElement) {
      const repName = img.dataset.repName;
      if (!repName) {
        showPlaceholder(img);
        return;
      }

      const fallbacks = stateRepFallbacks.get(repName);
      if (fallbacks && fallbacks.length > 0) {
        const nextUrl = fallbacks.shift()!;
        img.src = nextUrl;
      } else {
        showPlaceholder(img);
      }
    }

    function showPlaceholder(img: HTMLImageElement) {
      const placeholder = document.createElement('div');
      placeholder.className = 'w-20 h-24 bg-neutral-200 dark:bg-neutral-700 rounded-lg flex-shrink-0 flex items-center justify-center';
      placeholder.innerHTML = `<svg class="w-8 h-8 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>`;
      img.parentElement?.replaceChild(placeholder, img);
    }

    async function findReps() {
      hideError();

      const street = streetInput.value.trim();
      const city = cityInput.value.trim();
      const zip = zipInput.value.trim();

      // Validation
      if (!street || !city || !zip) {
        showError('Please fill in all required fields.');
        return;
      }

      if (!/^\d{5}$/.test(zip)) {
        showError('Please enter a valid 5-digit ZIP code.');
        return;
      }

      // Show loading
      searchForm.classList.add('hidden');
      loading.classList.remove('hidden');

      try {
        // Step 1: Geocode address and get all district info via API proxy (avoids CORS)
        const geocodeUrl = `${CONGRESS_API}?type=geocode&street=${encodeURIComponent(street)}&city=${encodeURIComponent(city)}&zip=${zip}`;
        const geocodeResponse = await fetch(geocodeUrl);
        const geocodeData = await geocodeResponse.json();

        if (geocodeData.error) {
          throw new Error(geocodeData.error);
        }

        const { formattedAddress, coordinates, congressDistrict, assemblyDistrict, senateDistrict, countyFips, placeGeoid, placeName } = geocodeData;

        // Step 2: Fetch all representative data in parallel via API proxy
        const fetchPromises = [
          fetch(`${CONGRESS_API}?state=CA&district=${congressDistrict}&type=house`).then(r => r.json()),
          fetch(`${CONGRESS_API}?state=CA&type=senate`).then(r => r.json()),
          fetch(`${CONGRESS_API}?type=state-assembly&district=${assemblyDistrict}`).then(r => r.json()),
          fetch(`${CONGRESS_API}?type=state-senate&district=${senateDistrict}`).then(r => r.json())
        ];

        // Only fetch county supervisor if we have a supported Bay Area county
        const bayAreaCounties = ['06075', '06081', '06085', '06001', '06013', '06041', '06097', '06055', '06095'];
        const isBayArea = countyFips && bayAreaCounties.includes(countyFips);

        if (isBayArea && coordinates) {
          fetchPromises.push(
            fetch(`${CONGRESS_API}?type=county-supervisor&county=${countyFips}&x=${coordinates.x}&y=${coordinates.y}`).then(r => r.json())
          );
        }

        // Fetch city council data if we have a place (city) GEOID
        // San Francisco (0667000) is a city-county, so skip it (already covered by county supervisor)
        const supportedCities = ['0668000', '0653000', '0626000', '0633000']; // San Jose, Oakland, Fremont, Hayward
        const hasCity = placeGeoid && supportedCities.includes(placeGeoid);

        if (hasCity && coordinates) {
          fetchPromises.push(
            fetch(`${CONGRESS_API}?type=city-council&place=${placeGeoid}&x=${coordinates.x}&y=${coordinates.y}`).then(r => r.json())
          );
        }

        const results_data = await Promise.all(fetchPromises);
        const [houseData, senateData, assemblyData, stateSenateData] = results_data;
        const countySupervisorData = isBayArea ? results_data[4] : null;
        const cityCouncilData = hasCity ? results_data[isBayArea ? 5 : 4] : null;

        // Display results
        loading.classList.add('hidden');
        results.classList.remove('hidden');

        addressText.textContent = formattedAddress;

        // Render Congress results
        let congressHtml = '';

        // House Representative
        if (houseData.members && houseData.members.length > 0) {
          congressHtml += renderRepCard(houseData.members[0], `U.S. House of Representatives - District ${congressDistrict}`);
        } else {
          congressHtml += `
            <div class="p-4">
              <div class="text-sm text-neutral-600 dark:text-neutral-300 mb-2">U.S. House - District ${congressDistrict}</div>
              <div class="text-neutral-600 dark:text-neutral-300">Representative information not available</div>
            </div>
          `;
        }

        // Senators
        if (senateData.members && senateData.members.length > 0) {
          senateData.members.forEach((senator: CongressMember) => {
            congressHtml += renderRepCard(senator, 'U.S. Senate - California');
          });
        }

        congressResults.innerHTML = congressHtml;

        // Render CA State Legislature results
        stateResults.innerHTML =
          renderStateRepCardFromApi(assemblyData, `State Assembly District ${assemblyDistrict}`) +
          renderStateRepCardFromApi(stateSenateData, `State Senate District ${senateDistrict}`);

        // Render County Supervisor results (only for Bay Area)
        if (countySupervisorData) {
          countySection.classList.remove('hidden');
          countyResults.innerHTML = renderCountySupervisorCard(countySupervisorData);
        } else {
          countySection.classList.add('hidden');
        }

        // Render City Council results
        if (cityCouncilData && !cityCouncilData.error) {
          citySection.classList.remove('hidden');
          citySectionTitle.textContent = `${cityCouncilData.city} City Council`;
          cityResults.innerHTML = renderCityCouncilSection(cityCouncilData);
        } else {
          citySection.classList.add('hidden');
        }

      } catch (err) {
        loading.classList.add('hidden');
        searchForm.classList.remove('hidden');
        showError(err instanceof Error ? err.message : 'An error occurred. Please try again.');
      }
    }
  </script>
</BaseLayout>
