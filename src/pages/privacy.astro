---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
---

<BaseLayout
  title="Privacy Policy"
  description="Privacy policy for Bay Navigator - a community resource by Bay Tides."
>
  <section class="section">
    <div class="container-page">
      <div class="max-w-4xl mx-auto">
        <Breadcrumb items={[{ label: 'Privacy Policy', href: '/privacy' }]} />

        <!-- Hero Section -->
        <div class="text-center mb-10">
          <h1
            class="text-4xl md:text-5xl font-bold text-neutral-900 dark:text-white mb-4"
            data-i18n="privacy.title"
          >
            Privacy Policy
          </h1>
          <p class="text-neutral-600 dark:text-neutral-300" data-i18n="privacy.lastUpdated">
            Last updated: January 19, 2026
          </p>
        </div>

        <!-- TL;DR Summary Card -->
        <div
          class="bg-gradient-to-br from-primary-50 to-primary-100 dark:from-primary-900/30 dark:to-primary-800/20 rounded-2xl p-6 md:p-8 mb-10 border border-primary-200 dark:border-primary-800"
        >
          <div class="flex items-start gap-4">
            <div class="bg-white dark:bg-neutral-800 p-3 rounded-xl shadow-sm flex-shrink-0">
              <svg
                class="w-8 h-8 text-primary-600 dark:text-primary-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                ></path>
              </svg>
            </div>
            <div>
              <h2
                class="text-lg font-semibold text-neutral-900 dark:text-white mb-2"
                data-i18n="privacy.shortVersion"
              >
                The Short Version
              </h2>
              <p
                class="text-neutral-700 dark:text-neutral-300"
                data-i18n="privacy.shortVersionText"
              >
                We don't track you. We don't collect personal information. We don't use cookies for
                tracking. We don't sell any data. This site is open source so you can verify this
                yourself.
              </p>
            </div>
          </div>
        </div>

        <!-- Privacy Stats Row -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
          <div
            class="bg-white dark:bg-neutral-800 rounded-xl p-4 text-center border border-neutral-200 dark:border-neutral-700"
          >
            <div class="text-3xl font-bold text-green-600 dark:text-green-400 mb-1">0</div>
            <div
              class="text-sm text-neutral-600 dark:text-neutral-400"
              data-i18n="privacy.trackingCookies"
            >
              Tracking Cookies
            </div>
          </div>
          <div
            class="bg-white dark:bg-neutral-800 rounded-xl p-4 text-center border border-neutral-200 dark:border-neutral-700"
          >
            <div class="text-3xl font-bold text-green-600 dark:text-green-400 mb-1">0</div>
            <div
              class="text-sm text-neutral-600 dark:text-neutral-400"
              data-i18n="privacy.thirdPartyAds"
            >
              Third-Party Ads
            </div>
          </div>
          <div
            class="bg-white dark:bg-neutral-800 rounded-xl p-4 text-center border border-neutral-200 dark:border-neutral-700"
          >
            <div class="text-3xl font-bold text-green-600 dark:text-green-400 mb-1">0</div>
            <div
              class="text-sm text-neutral-600 dark:text-neutral-400"
              data-i18n="privacy.dataSold"
            >
              Data Sold
            </div>
          </div>
          <div
            class="bg-white dark:bg-neutral-800 rounded-xl p-4 text-center border border-neutral-200 dark:border-neutral-700"
          >
            <div class="text-3xl font-bold text-primary-600 dark:text-primary-400 mb-1">100%</div>
            <div
              class="text-sm text-neutral-600 dark:text-neutral-400"
              data-i18n="privacy.openSource"
            >
              Open Source
            </div>
          </div>
        </div>

        <!-- Section 1: Information We Collect -->
        <section class="mb-12">
          <!-- Visual Summary -->
          <div
            class="bg-white dark:bg-neutral-800 rounded-xl p-6 border border-neutral-200 dark:border-neutral-700 mb-4"
          >
            <div class="flex items-center gap-3 mb-4">
              <div
                class="bg-green-100 dark:bg-green-900/30 w-10 h-10 rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 text-green-600 dark:text-green-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <h2
                class="text-xl font-bold text-neutral-900 dark:text-white"
                data-i18n="privacy.informationWeCollect"
              >
                Information We Collect
              </h2>
            </div>
            <div class="grid sm:grid-cols-2 gap-3">
              <div class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-green-500 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span
                  class="text-sm text-neutral-700 dark:text-neutral-300"
                  data-i18n="privacy.noAccountRequired">No account required</span
                >
              </div>
              <div class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-green-500 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span
                  class="text-sm text-neutral-700 dark:text-neutral-300"
                  data-i18n="privacy.noTrackingCookies">No tracking cookies</span
                >
              </div>
              <div class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-green-500 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span
                  class="text-sm text-neutral-700 dark:text-neutral-300"
                  data-i18n="privacy.noPersonalIdentifiers">No personal identifiers</span
                >
              </div>
              <div class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-green-500 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span
                  class="text-sm text-neutral-700 dark:text-neutral-300"
                  data-i18n="privacy.noThirdPartyTrackers">No third-party trackers</span
                >
              </div>
            </div>
          </div>
          <!-- Legal Text -->
          <details class="group">
            <summary
              class="flex items-center gap-2 text-sm text-primary-700 dark:text-primary-300 cursor-pointer hover:underline"
            >
              <svg
                class="w-4 h-4 group-open:rotate-90 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
              <span data-i18n="privacy.readFullLegalText">Read full legal text</span>
            </summary>
            <div class="mt-4 pl-6 border-l-2 border-neutral-200 dark:border-neutral-700">
              <p class="text-neutral-600 dark:text-neutral-300 mb-4">
                <strong>We do not collect personal information.</strong> Bay Navigator is designed to
                respect your privacy:
              </p>
              <ul class="text-neutral-600 dark:text-neutral-300 space-y-2 mb-4 list-disc pl-5">
                <li>No account creation required</li>
                <li>No cookies for tracking or advertising</li>
                <li>No analytics that identify individual users</li>
                <li>No collection of names, emails, or contact information</li>
                <li>No third-party trackers</li>
                <li>We do not sell, rent, or share your personal information with third parties</li>
              </ul>
            </div>
          </details>
        </section>

        <!-- Section 2: Local Storage -->
        <section class="mb-12">
          <!-- Visual Summary -->
          <div
            class="bg-white dark:bg-neutral-800 rounded-xl p-6 border border-neutral-200 dark:border-neutral-700 mb-4"
          >
            <div class="flex items-center gap-3 mb-4">
              <div
                class="bg-blue-100 dark:bg-blue-900/30 w-10 h-10 rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 text-blue-600 dark:text-blue-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                  ></path>
                </svg>
              </div>
              <h2
                class="text-xl font-bold text-neutral-900 dark:text-white"
                data-i18n="privacy.localStorage"
              >
                Local Storage
              </h2>
            </div>
            <p
              class="text-neutral-600 dark:text-neutral-400 mb-4"
              data-i18n="privacy.dataStaysOnDevice"
            >
              Data stays on your device and never leaves:
            </p>
            <div class="flex flex-wrap gap-2">
              <span
                class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 rounded-full text-sm font-medium"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
                  ></path></svg
                >
                <span data-i18n="privacy.themePreference">Theme preference</span>
              </span>
              <span
                class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 rounded-full text-sm font-medium"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path></svg
                >
                <span data-i18n="privacy.favorites">Favorites</span>
              </span>
              <span
                class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 rounded-full text-sm font-medium"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg
                >
                <span data-i18n="privacy.recentSearches">Recent searches</span>
              </span>
            </div>
          </div>
          <!-- Legal Text -->
          <details class="group">
            <summary
              class="flex items-center gap-2 text-sm text-primary-700 dark:text-primary-300 cursor-pointer hover:underline"
            >
              <svg
                class="w-4 h-4 group-open:rotate-90 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
              <span data-i18n="privacy.readFullLegalText">Read full legal text</span>
            </summary>
            <div class="mt-4 pl-6 border-l-2 border-neutral-200 dark:border-neutral-700">
              <p class="text-neutral-600 dark:text-neutral-300 mb-4">
                We use your browser's local storage to save preferences that stay on your device:
              </p>
              <ul class="text-neutral-600 dark:text-neutral-300 space-y-2 mb-4 list-disc pl-5">
                <li><strong>Theme preference</strong> (light/dark mode)</li>
                <li><strong>Favorite programs</strong> (only in the mobile app)</li>
                <li><strong>Recent searches</strong> (only in the mobile app)</li>
              </ul>
              <p class="text-neutral-600 dark:text-neutral-300">
                This data never leaves your device and is not sent to any server. This data is not
                processed ephemerally—it persists on your device until you clear it.
              </p>
            </div>
          </details>
        </section>

        <!-- Section 3: AI-Powered Search -->
        <section class="mb-12">
          <!-- Visual Summary -->
          <div
            class="bg-gradient-to-br from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 rounded-xl p-6 border border-indigo-200 dark:border-indigo-800 mb-4"
          >
            <div class="flex items-center gap-3 mb-4">
              <div
                class="bg-white dark:bg-neutral-800 w-10 h-10 rounded-lg flex items-center justify-center shadow-sm"
              >
                <svg
                  class="w-5 h-5 text-indigo-600 dark:text-indigo-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                  ></path>
                </svg>
              </div>
              <h2
                class="text-xl font-bold text-neutral-900 dark:text-white"
                data-i18n="privacy.aiPoweredSearch"
              >
                AI-Powered Search
              </h2>
            </div>
            <div class="grid sm:grid-cols-2 gap-3">
              <div class="flex items-start gap-2">
                <svg
                  class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-neutral-700 dark:text-neutral-300"
                  ><strong>Not stored</strong> — Queries are processed and discarded</span
                >
              </div>
              <div class="flex items-start gap-2">
                <svg
                  class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-neutral-700 dark:text-neutral-300"
                  ><strong>Not for training</strong> — Never trains AI models</span
                >
              </div>
              <div class="flex items-start gap-2">
                <svg
                  class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-neutral-700 dark:text-neutral-300"
                  ><strong>No identifiers</strong> — Not linked to you</span
                >
              </div>
              <div class="flex items-start gap-2">
                <svg
                  class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm text-neutral-700 dark:text-neutral-300"
                  ><strong>Encrypted</strong> — AES-256 at rest</span
                >
              </div>
            </div>
            <p
              class="text-sm text-neutral-600 dark:text-neutral-400 mt-4 bg-white/50 dark:bg-neutral-800/50 rounded-lg p-3"
            >
              <strong>To avoid AI entirely:</strong> Toggle off "Smart Search" or use Bay Navigator offline.
            </p>
          </div>

          <!-- Data Flow Diagram -->
          <div
            class="bg-white dark:bg-neutral-800 rounded-xl p-6 border border-neutral-200 dark:border-neutral-700 mb-4"
          >
            <h3
              class="text-sm font-semibold text-neutral-700 dark:text-neutral-300 mb-4 text-center"
            >
              How Your Search Data Flows
            </h3>

            <!-- Flow Diagram -->
            <div class="relative">
              <!-- Your Device -->
              <div class="flex flex-col items-center mb-4">
                <div
                  class="bg-green-100 dark:bg-green-900/40 border-2 border-green-500 dark:border-green-600 rounded-xl p-4 w-full max-w-xs"
                >
                  <div class="flex items-center justify-center gap-2 mb-2">
                    <svg
                      class="w-5 h-5 text-green-600 dark:text-green-400"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                      ></path>
                    </svg>
                    <span class="font-semibold text-green-800 dark:text-green-200">Your Device</span
                    >
                  </div>
                  <div class="text-xs text-green-700 dark:text-green-300 space-y-1">
                    <div class="flex items-center gap-1">
                      <span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span>
                      <span>Theme, favorites, searches</span>
                    </div>
                    <div class="flex items-center gap-1">
                      <span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span>
                      <span>GPS location (never sent)</span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Arrow down -->
              <div class="flex justify-center mb-2">
                <div class="flex flex-col items-center">
                  <svg
                    class="w-5 h-5 text-neutral-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                  </svg>
                  <span class="text-xs text-neutral-500 dark:text-neutral-400">search query</span>
                </div>
              </div>

              <!-- Tiered Processing -->
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 mb-4">
                <!-- Local Tiers (Green) -->
                <div
                  class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-3"
                >
                  <div
                    class="text-xs font-semibold text-green-700 dark:text-green-300 mb-2 flex items-center gap-1"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"></path>
                    </svg>
                    Stays on Device
                  </div>
                  <div class="space-y-2">
                    <div class="bg-white dark:bg-neutral-800 rounded p-2">
                      <div class="text-xs font-medium text-neutral-800 dark:text-neutral-200">
                        Tier 1: Quick Cache
                      </div>
                      <div class="text-xs text-neutral-500 dark:text-neutral-400">
                        Common queries answered instantly
                      </div>
                    </div>
                    <div class="bg-white dark:bg-neutral-800 rounded p-2">
                      <div class="text-xs font-medium text-neutral-800 dark:text-neutral-200">
                        Tier 2: Fuzzy Search
                      </div>
                      <div class="text-xs text-neutral-500 dark:text-neutral-400">
                        Keyword matching with synonyms
                      </div>
                    </div>
                  </div>
                </div>

                <!-- AI Chat (Green - Self-Hosted) -->
                <div
                  class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-3"
                >
                  <div
                    class="text-xs font-semibold text-green-700 dark:text-green-300 mb-2 flex items-center gap-1"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"></path>
                    </svg>
                    Self-Hosted AI (Query Only)
                  </div>
                  <div class="space-y-2">
                    <div class="bg-white dark:bg-neutral-800 rounded p-2">
                      <div class="text-xs font-medium text-neutral-800 dark:text-neutral-200">
                        Tier 3: Bay Tides AI
                      </div>
                      <div class="text-xs text-neutral-500 dark:text-neutral-400">
                        Self-hosted Llama 3.2, not stored
                      </div>
                    </div>
                    <div class="bg-white dark:bg-neutral-800 rounded p-2">
                      <div class="text-xs font-medium text-neutral-800 dark:text-neutral-200">
                        No external AI services
                      </div>
                      <div class="text-xs text-neutral-500 dark:text-neutral-400">
                        Your queries never leave our servers
                      </div>
                    </div>
                  </div>
                </div>
              </div>

