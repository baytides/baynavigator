---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProgramCard from '../components/ProgramCard.astro';
import SearchBar from '../components/SearchBar.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import WifiQRCode from '../components/WifiQRCode.astro';
import yaml from 'js-yaml';
import fs from 'node:fs';
import path from 'node:path';

// Load groups data
const groupsPath = path.join(process.cwd(), 'src/data/groups.yml');
const groupsData = yaml.load(fs.readFileSync(groupsPath, 'utf-8')) as {
  groups: Array<{ id: string; name: string; icon: string; description: string }>;
  categories: Array<{ id: string; name: string; icon: string }>;
};

// Load suppressed programs list
const suppressedPath = path.join(process.cwd(), 'src/data/suppressed.yml');
let suppressedIds: Set<string> = new Set();
if (fs.existsSync(suppressedPath)) {
  const suppressedData = yaml.load(fs.readFileSync(suppressedPath, 'utf-8')) as Array<{
    id: string;
  }> | null;
  if (Array.isArray(suppressedData)) {
    suppressedIds = new Set(suppressedData.map((s) => s.id));
  }
}

// Load all program YAML files dynamically
const dataDir = path.join(process.cwd(), 'src/data');
const NON_PROGRAM_FILES = [
  'cities.yml',
  'groups.yml',
  'zipcodes.yml',
  'suppressed.yml',
  'search-config.yml',
  'transit-agencies.yml',
  'county-supervisors.yml',
  'site-config.yml',
  'bay-area-jurisdictions.yml',
  'city-profiles.yml',
  'helplines.yml',
];
const programFiles = fs
  .readdirSync(dataDir)
  .filter((f) => f.endsWith('.yml') && !NON_PROGRAM_FILES.includes(f));

interface Amenity {
  name: string;
  link?: string;
}

interface Program {
  id: string;
  name: string;
  category: string;
  area: string;
  description?: string;
  what_they_offer?: string;
  how_to_get_it?: string;
  phone?: string;
  link?: string;
  link_text?: string;
  groups?: string[];
  verified_by?: string;
  verified_date?: string;
  // Search keywords for fuzzy matching
  keywords?: string;
  // New fields
  city?: string;
  address?: string;
  map_link?: string;
  amenities?: Amenity[];
  fee_info?: string;
  latitude?: number;
  longitude?: number;
}

/**
 * Generate a privacy-respecting map link.
 * Uses Apple Maps for directions - privacy-respecting and works on all platforms.
 */
function generateMapLink(
  address?: string,
  city?: string,
  latitude?: number,
  longitude?: number
): string | undefined {
  // If we have coordinates, use Apple Maps with coordinates
  if (latitude && longitude) {
    return `https://maps.apple.com/?daddr=${latitude},${longitude}`;
  }

  // Fall back to address search if no coordinates
  if (!address) return undefined;

  // Combine address with city for better search accuracy
  const fullAddress = city ? `${address}, ${city}, CA` : address;
  const encoded = encodeURIComponent(fullAddress);

  // Return Apple Maps with address as destination
  return `https://maps.apple.com/?daddr=${encoded}`;
}

let allPrograms: Program[] = [];

for (const file of programFiles) {
  const filePath = path.join(dataDir, file);
  if (fs.existsSync(filePath)) {
    const content = fs.readFileSync(filePath, 'utf-8');
    const programs = yaml.load(content) as Program[];
    if (Array.isArray(programs)) {
      allPrograms = [...allPrograms, ...programs];
    }
  }
}

// Filter out suppressed programs
allPrograms = allPrograms.filter((p) => !suppressedIds.has(p.id));

// Get unique categories
const categories = [...new Set(allPrograms.map((p) => p.category))].sort();

// Sort programs by name
allPrograms.sort((a, b) => a.name.localeCompare(b.name));
