---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProgramCard from '../components/ProgramCard.astro';
import SearchBar from '../components/SearchBar.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import yaml from 'js-yaml';
import fs from 'node:fs';
import path from 'node:path';

// Load groups data
const groupsPath = path.join(process.cwd(), 'src/data/groups.yml');
const groupsData = yaml.load(fs.readFileSync(groupsPath, 'utf-8')) as {
  groups: Array<{ id: string; name: string; icon: string; description: string }>;
  categories: Array<{ id: string; name: string; icon: string }>;
};

// Load suppressed programs list
const suppressedPath = path.join(process.cwd(), 'src/data/suppressed.yml');
let suppressedIds: Set<string> = new Set();
if (fs.existsSync(suppressedPath)) {
  const suppressedData = yaml.load(fs.readFileSync(suppressedPath, 'utf-8')) as Array<{
    id: string;
  }> | null;
  if (Array.isArray(suppressedData)) {
    suppressedIds = new Set(suppressedData.map((s) => s.id));
  }
}

// Load all program YAML files dynamically
const dataDir = path.join(process.cwd(), 'src/data');
const NON_PROGRAM_FILES = [
  'cities.yml',
  'groups.yml',
  'zipcodes.yml',
  'suppressed.yml',
  'search-config.yml',
  'transit-agencies.yml',
  'county-supervisors.yml',
  'site-config.yml',
  'bay-area-jurisdictions.yml',
  'city-profiles.yml',
  'helplines.yml',
];
const programFiles = fs
  .readdirSync(dataDir)
  .filter((f) => f.endsWith('.yml') && !NON_PROGRAM_FILES.includes(f));

interface Amenity {
  name: string;
  link?: string;
}

interface Program {
  id: string;
  name: string;
  category: string;
  area: string;
  description?: string;
  what_they_offer?: string;
  how_to_get_it?: string;
  phone?: string;
  link?: string;
  link_text?: string;
  groups?: string[];
  verified_by?: string;
  verified_date?: string;
  // New fields
  city?: string;
  address?: string;
  map_link?: string;
  amenities?: Amenity[];
  fee_info?: string;
  latitude?: number;
  longitude?: number;
}

/**
 * Generate a privacy-respecting map link.
 * Uses OpenStreetMap directions when coordinates are available,
 * otherwise falls back to OSM search by address.
 */
function generateMapLink(
  address?: string,
  city?: string,
  latitude?: number,
  longitude?: number
): string | undefined {
  // If we have coordinates, use direct OSM directions link
  if (latitude && longitude) {
    return `https://www.openstreetmap.org/directions?to=${latitude},${longitude}`;
  }

  // Fall back to address search if no coordinates
  if (!address) return undefined;

  // Combine address with city for better search accuracy
  const fullAddress = city ? `${address}, ${city}, CA` : address;
  const encoded = encodeURIComponent(fullAddress);

  // Return OpenStreetMap search link
  return `https://www.openstreetmap.org/search?query=${encoded}`;
}

let allPrograms: Program[] = [];

for (const file of programFiles) {
  const filePath = path.join(dataDir, file);
  if (fs.existsSync(filePath)) {
    const content = fs.readFileSync(filePath, 'utf-8');
    const programs = yaml.load(content) as Program[];
    if (Array.isArray(programs)) {
      allPrograms = [...allPrograms, ...programs];
    }
  }
}

// Filter out suppressed programs
allPrograms = allPrograms.filter((p) => !suppressedIds.has(p.id));

// Get unique categories
const categories = [...new Set(allPrograms.map((p) => p.category))].sort();

// Sort programs by name
allPrograms.sort((a, b) => a.name.localeCompare(b.name));
---

<BaseLayout
  title="Directory"
  description="Browse the full directory of free and low-cost programs across the San Francisco Bay Area."
>
  <!-- Header Section -->
  <section
    class="bg-gradient-to-b from-primary-50 to-white dark:from-neutral-800 dark:to-neutral-900 py-8"
  >
    <div class="container-page">
      <Breadcrumb items={[{ label: 'Directory' }]} />
      <h1
        class="text-3xl md:text-4xl font-bold text-neutral-900 dark:text-white mb-4"
        data-i18n="directory.title"
      >
        Program Directory
      </h1>
      <p class="text-lg text-neutral-600 dark:text-neutral-300 mb-6 max-w-2xl">
        <span data-i18n="directory.browseAll">Browse all</span>{' '}
        {allPrograms.length}{' '}
        <span data-i18n="directory.programsAvailable"
          >programs and services available in the Bay Area.</span
        >
      </p>
      <div class="max-w-2xl">
        <SearchBar placeholder="Search programs..." size="large" />
      </div>
    </div>
  </section>

  <!-- Filters Section -->
  <section
    class="bg-neutral-50 dark:bg-neutral-800 border-b border-neutral-200 dark:border-neutral-700 py-6"
  >
    <div class="container-page">
      <!-- Filter Controls Row -->
      <div class="flex flex-wrap items-center gap-4 mb-4">
        <!-- Category Dropdown -->
        <div class="flex items-center gap-2">
          <label
            for="category-select"
            class="text-sm font-medium text-neutral-600 dark:text-neutral-300"
            data-i18n="directory.category">Category:</label
          >
          <select
            id="category-select"
            class="px-3 py-2 rounded-lg border border-neutral-300 dark:border-neutral-600 bg-white dark:bg-neutral-700 text-neutral-900 dark:text-white text-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
          >
            <option value="all" data-i18n="categories.all">All Categories</option>
            {categories.map((cat) => <option value={cat}>{cat}</option>)}
          </select>
        </div>

        <!-- Verified Only Checkbox -->
        <label class="inline-flex items-center gap-2 cursor-pointer">
          <input
            type="checkbox"
            id="verified-only"
            class="w-4 h-4 rounded border-neutral-300 dark:border-neutral-600 text-primary-600 focus:ring-primary-500 dark:bg-neutral-700"
          />
          <span
            class="text-sm text-neutral-600 dark:text-neutral-300"
            data-i18n="directory.authenticatedOnly">Authenticated only</span
          >
        </label>

        <!-- Clear Filters Button -->
        <button
          type="button"
          id="clear-filters"
          class="hidden text-sm text-primary-600 dark:text-primary-300 hover:underline"
          data-i18n="common.clearFilters"
        >
          Clear filters
        </button>
      </div>

      <!-- Group Pills -->
      <div>
        <p
          class="text-sm text-neutral-600 dark:text-neutral-300 mb-3"
          data-i18n="directory.filterByGroup"
        >
          Filter by group:
        </p>
        <div class="flex flex-wrap gap-2" id="group-filters">
          {
            groupsData.groups.slice(0, 12).map((group) => (
              <button
                type="button"
                class="group-filter-btn inline-flex items-center gap-1.5 px-3 py-1.5 bg-white dark:bg-neutral-700 border border-neutral-200 dark:border-neutral-600 rounded-full text-sm font-medium text-neutral-700 dark:text-neutral-200 hover:bg-primary-50 dark:hover:bg-primary-900/30 hover:border-primary-300 dark:hover:border-primary-700 transition-colors"
                data-group={group.id}
              >
                <span aria-hidden="true">{group.icon}</span>
                {group.name}
              </button>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Programs List -->
  <section class="section" id="programs">
    <div class="container-page">
      <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <p id="results-count" class="text-neutral-600 dark:text-neutral-300">
          {allPrograms.length} programs found
        </p>
        <div
          id="sort-toggle-container"
          class="flex items-center gap-2"
          role="group"
          aria-label="Sort results"
        >
          <span class="text-sm text-neutral-500 dark:text-neutral-400">Sort by:</span>
          <div class="inline-flex rounded-md shadow-sm" role="radiogroup" aria-label="Sort order">
            <button
              id="sort-relevance"
              type="button"
              class="sort-toggle-btn sort-toggle-active px-3 py-1.5 text-sm font-medium rounded-l-md border border-neutral-300 dark:border-neutral-600 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:z-10 transition-colors"
              role="radio"
              aria-checked="true"
              data-sort="relevance"
            >
              Relevance
            </button>
            <button
              id="sort-alpha"
              type="button"
              class="sort-toggle-btn px-3 py-1.5 text-sm font-medium rounded-r-md border border-l-0 border-neutral-300 dark:border-neutral-600 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:z-10 transition-colors"
              role="radio"
              aria-checked="false"
              data-sort="alpha"
            >
              A-Z
            </button>
          </div>
        </div>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" id="programs-grid">
        {
          allPrograms.map((program) => (
            <ProgramCard
              id={program.id}
              name={program.name}
              category={program.category}
              area={program.area}
              description={program.description}
              whatTheyOffer={program.what_they_offer}
              howToGetIt={program.how_to_get_it}
              phone={program.phone}
              link={program.link}
              linkText={program.link_text}
              groups={program.groups}
              verifiedBy={program.verified_by}
              verifiedDate={program.verified_date}
              city={program.city}
              address={program.address}
              mapLink={generateMapLink(
                program.address,
                program.city,
                program.latitude,
                program.longitude
              )}
              amenities={program.amenities}
              feeInfo={program.fee_info}
            />
          ))
        }
      </div>

      <!-- Empty state for filtered results -->
      <div id="empty-state" class="hidden text-center py-12">
        <svg
          class="w-16 h-16 mx-auto text-neutral-400 dark:text-neutral-500 mb-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          ></path>
        </svg>
        <h3
          class="text-lg font-medium text-neutral-900 dark:text-white mb-2"
          data-i18n="directory.noMatchingPrograms"
        >
          No programs match your filters
        </h3>
        <p class="text-neutral-600 dark:text-neutral-300 mb-4" data-i18n="directory.tryAdjusting">
          Try adjusting your filters or search terms.
        </p>
        <button
          id="empty-state-clear"
          type="button"
          class="btn-secondary text-sm"
          data-i18n="directory.clearAllFilters"
        >
          Clear all filters
        </button>
      </div>

      {
        allPrograms.length === 0 && (
          <div class="text-center py-12">
            <p class="text-neutral-600 dark:text-neutral-300">
              No programs found. Check back soon!
            </p>
          </div>
        )
      }

      <!-- Data Trust Notice -->
      <div class="mt-8 pt-6 border-t border-neutral-200 dark:border-neutral-700 text-center">
        <p
          class="text-sm text-neutral-600 dark:text-neutral-300 mb-2"
          data-i18n="directory.verifyNotice"
        >
          Programs changeâ€”always verify details with the official source before applying.
        </p>
        <a
          href="https://github.com/baytides/baynavigator/issues/new?template=outdated-info.yml"
          class="inline-flex items-center gap-1.5 text-sm text-primary-700 dark:text-primary-300 hover:underline"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
            ></path>
          </svg>
          <span data-i18n="directory.reportOutdated">Report outdated info</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const urlParams = new URLSearchParams(window.location.search);
    const categoryParam = urlParams.get('category');
    const groupParam = urlParams.get('group');
    const searchParam = urlParams.get('q');

    const categorySelect = document.getElementById('category-select') as HTMLSelectElement;
    const verifiedCheckbox = document.getElementById('verified-only') as HTMLInputElement;
    const groupBtns = document.querySelectorAll('.group-filter-btn');
    const clearBtn = document.getElementById('clear-filters');
    const cards = document.querySelectorAll('[data-category]');
    const resultsCount = document.getElementById('results-count');
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const emptyState = document.getElementById('empty-state');
    const emptyStateClear = document.getElementById('empty-state-clear');
    const programsGrid = document.getElementById('programs-grid');

    let activeCategory = 'all';
    let activeGroup: string | null = null;
    let verifiedOnly = false;

    // Update results count and empty state
    function updateCount() {
      const visible = document.querySelectorAll(
        '[data-category]:not([style*="display: none"])'
      ).length;
      if (resultsCount) {
        resultsCount.textContent = `${visible} program${visible !== 1 ? 's' : ''} found`;
      }

      // Show/hide empty state
      if (visible === 0 && (activeCategory !== 'all' || activeGroup || verifiedOnly)) {
        emptyState?.classList.remove('hidden');
        programsGrid?.classList.add('hidden');
      } else {
        emptyState?.classList.add('hidden');
        programsGrid?.classList.remove('hidden');
      }
    }

    // Filter programs based on current state
    function filterPrograms() {
      cards.forEach((card) => {
        const cardCategory = card.getAttribute('data-category') || '';
        const cardGroups = (card.getAttribute('data-groups') || '').split(',').filter(Boolean);
        const cardVerified = card.getAttribute('data-verified') === 'true';

        const matchesCategory =
          activeCategory === 'all' || cardCategory.toLowerCase() === activeCategory.toLowerCase();
        const matchesGroup = !activeGroup || cardGroups.includes(activeGroup);
        const matchesVerified = !verifiedOnly || cardVerified;

        (card as HTMLElement).style.display =
          matchesCategory && matchesGroup && matchesVerified ? '' : 'none';
      });

      updateCount();

      // Show/hide clear button
      if (activeCategory !== 'all' || activeGroup || verifiedOnly) {
        clearBtn?.classList.remove('hidden');
      } else {
        clearBtn?.classList.add('hidden');
      }
    }

    // Verified checkbox change handler
    verifiedCheckbox?.addEventListener('change', () => {
      verifiedOnly = verifiedCheckbox.checked;
      filterPrograms();
    });

    // Category select change handler
    categorySelect?.addEventListener('change', () => {
      activeCategory = categorySelect.value;

      // Update URL
      const url = new URL(window.location.href);
      if (activeCategory === 'all') {
        url.searchParams.delete('category');
      } else {
        url.searchParams.set('category', activeCategory);
      }
      window.history.replaceState({}, '', url);

      filterPrograms();
    });

    // Group button click handler
    groupBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        const group = (btn as HTMLElement).dataset.group || '';

        if (activeGroup === group) {
          // Deselect
          activeGroup = null;
          btn.classList.remove(
            'bg-primary-100',
            'dark:bg-primary-900/50',
            'border-primary-400',
            'dark:border-primary-600',
            'text-primary-700',
            'dark:text-primary-300'
          );
          btn.classList.add(
            'bg-white',
            'dark:bg-neutral-700',
            'border-neutral-200',
            'dark:border-neutral-600'
          );

          const url = new URL(window.location.href);
          url.searchParams.delete('group');
          window.history.replaceState({}, '', url);
        } else {
          // Deselect all first
          groupBtns.forEach((b) => {
            b.classList.remove(
              'bg-primary-100',
              'dark:bg-primary-900/50',
              'border-primary-400',
              'dark:border-primary-600',
              'text-primary-700',
              'dark:text-primary-300'
            );
            b.classList.add(
              'bg-white',
              'dark:bg-neutral-700',
              'border-neutral-200',
              'dark:border-neutral-600'
            );
          });

          // Select this one
          activeGroup = group;
          btn.classList.remove(
            'bg-white',
            'dark:bg-neutral-700',
            'border-neutral-200',
            'dark:border-neutral-600'
          );
          btn.classList.add(
            'bg-primary-100',
            'dark:bg-primary-900/50',
            'border-primary-400',
            'dark:border-primary-600',
            'text-primary-700',
            'dark:text-primary-300'
          );

          const url = new URL(window.location.href);
          url.searchParams.set('group', group);
          window.history.replaceState({}, '', url);
        }

        filterPrograms();
      });
    });

    // Clear all filters function
    function clearAllFilters() {
      activeCategory = 'all';
      activeGroup = null;
      verifiedOnly = false;

      // Reset category select
      if (categorySelect) {
        categorySelect.value = 'all';
      }

      // Reset verified checkbox
      if (verifiedCheckbox) {
        verifiedCheckbox.checked = false;
      }

      // Reset group buttons
      groupBtns.forEach((btn) => {
        btn.classList.remove(
          'bg-primary-100',
          'dark:bg-primary-900/50',
          'border-primary-400',
          'dark:border-primary-600',
          'text-primary-700',
          'dark:text-primary-300'
        );
        btn.classList.add(
          'bg-white',
          'dark:bg-neutral-700',
          'border-neutral-200',
          'dark:border-neutral-600'
        );
      });

      // Clear URL params
      const url = new URL(window.location.href);
      url.searchParams.delete('category');
      url.searchParams.delete('group');
      window.history.replaceState({}, '', url);

      filterPrograms();
    }

    // Clear filters button handlers
    clearBtn?.addEventListener('click', clearAllFilters);
    emptyStateClear?.addEventListener('click', clearAllFilters);

    // Apply initial filters from URL
    if (categoryParam) {
      // Find matching option (case-insensitive)
      const options = categorySelect?.options;
      if (options) {
        for (let i = 0; i < options.length; i++) {
          if (options[i].value.toLowerCase() === categoryParam.toLowerCase()) {
            categorySelect.selectedIndex = i;
            activeCategory = options[i].value;
            break;
          }
        }
      }
    }

    if (groupParam) {
      activeGroup = groupParam;
      const matchingBtn = document.querySelector(`[data-group="${groupParam}"]`);
      if (matchingBtn) {
        matchingBtn.classList.remove(
          'bg-white',
          'dark:bg-neutral-700',
          'border-neutral-200',
          'dark:border-neutral-600'
        );
        matchingBtn.classList.add(
          'bg-primary-100',
          'dark:bg-primary-900/50',
          'border-primary-400',
          'dark:border-primary-600',
          'text-primary-700',
          'dark:text-primary-300'
        );
      }
    }

    // Apply initial filter
    if (categoryParam || groupParam) {
      filterPrograms();
    }

    // Handle hash fragment to scroll to specific program (from map)
    function handleHashNavigation() {
      const hash = window.location.hash;
      if (hash && hash.length > 1) {
        const programId = hash.substring(1); // Remove the #
        const targetCard = document.querySelector(`[data-program-id="${programId}"]`);

        if (targetCard) {
          // Make sure the card is visible (clear any filters that might hide it)
          const cardCategory = targetCard.getAttribute('data-category') || '';
          if (
            activeCategory !== 'all' &&
            cardCategory.toLowerCase() !== activeCategory.toLowerCase()
          ) {
            // Reset category filter to show all
            activeCategory = 'all';
            if (categorySelect) categorySelect.value = 'all';
          }

          // Clear group filter if it would hide the card
          const cardGroups = (targetCard.getAttribute('data-groups') || '')
            .split(',')
            .filter(Boolean);
          if (activeGroup && !cardGroups.includes(activeGroup)) {
            activeGroup = null;
            groupBtns.forEach((btn) => {
              btn.classList.remove(
                'bg-primary-100',
                'dark:bg-primary-900/50',
                'border-primary-400',
                'dark:border-primary-600',
                'text-primary-700',
                'dark:text-primary-300'
              );
              btn.classList.add(
                'bg-white',
                'dark:bg-neutral-700',
                'border-neutral-200',
                'dark:border-neutral-600'
              );
            });
          }

          // Apply filters to ensure card is visible
          filterPrograms();

          // Scroll to the card with some offset for the header
          setTimeout(() => {
            targetCard.scrollIntoView({ behavior: 'smooth', block: 'center' });

            // Highlight the card temporarily
            targetCard.classList.add('ring-2', 'ring-primary-500', 'ring-offset-2');
            setTimeout(() => {
              targetCard.classList.remove('ring-2', 'ring-primary-500', 'ring-offset-2');
            }, 3000);
          }, 100);
        }
      }
    }

    // Handle hash on page load
    handleHashNavigation();

    // Handle hash changes (e.g., back/forward navigation)
    window.addEventListener('hashchange', handleHashNavigation);

    // ==========================================
    // Sort Toggle Functionality
    // ==========================================

    const sortRelevanceBtn = document.getElementById('sort-relevance');
    const sortAlphaBtn = document.getElementById('sort-alpha');
    let currentSort: 'relevance' | 'alpha' = 'relevance';

    // Store original DOM order for relevance sorting
    const originalOrder: Element[] = Array.from(programsGrid?.children || []);

    function updateSortToggleUI() {
      const activeClasses = [
        'bg-primary-100',
        'dark:bg-primary-900/50',
        'text-primary-700',
        'dark:text-primary-300',
        'border-primary-400',
        'dark:border-primary-600',
      ];
      const inactiveClasses = [
        'bg-white',
        'dark:bg-neutral-800',
        'text-neutral-700',
        'dark:text-neutral-300',
      ];

      if (currentSort === 'relevance') {
        sortRelevanceBtn?.classList.remove(...inactiveClasses);
        sortRelevanceBtn?.classList.add(...activeClasses);
        sortRelevanceBtn?.setAttribute('aria-checked', 'true');

        sortAlphaBtn?.classList.remove(...activeClasses);
        sortAlphaBtn?.classList.add(...inactiveClasses);
        sortAlphaBtn?.setAttribute('aria-checked', 'false');
      } else {
        sortAlphaBtn?.classList.remove(...inactiveClasses);
        sortAlphaBtn?.classList.add(...activeClasses);
        sortAlphaBtn?.setAttribute('aria-checked', 'true');

        sortRelevanceBtn?.classList.remove(...activeClasses);
        sortRelevanceBtn?.classList.add(...inactiveClasses);
        sortRelevanceBtn?.setAttribute('aria-checked', 'false');
      }
    }

    function sortPrograms() {
      if (!programsGrid) return;

      const visibleCards = Array.from(programsGrid.children).filter(
        (card) => (card as HTMLElement).style.display !== 'none'
      ) as HTMLElement[];

      if (currentSort === 'alpha') {
        // Sort alphabetically by program name
        visibleCards.sort((a, b) => {
          const nameA = a.querySelector('[data-program-name]')?.textContent?.toLowerCase() || '';
          const nameB = b.querySelector('[data-program-name]')?.textContent?.toLowerCase() || '';
          return nameA.localeCompare(nameB);
        });

        // Reorder DOM elements
        visibleCards.forEach((card) => {
          programsGrid.appendChild(card);
        });
      } else {
        // Restore original order
        originalOrder.forEach((card) => {
          if (programsGrid.contains(card)) {
            programsGrid.appendChild(card);
          }
        });
      }
    }

    sortRelevanceBtn?.addEventListener('click', () => {
      if (currentSort !== 'relevance') {
        currentSort = 'relevance';
        updateSortToggleUI();
        sortPrograms();

        // Announce to screen readers
        const announcer = document.getElementById('search-announcer');
        if (announcer) {
          announcer.textContent = 'Results sorted by relevance';
        }
      }
    });

    sortAlphaBtn?.addEventListener('click', () => {
      if (currentSort !== 'alpha') {
        currentSort = 'alpha';
        updateSortToggleUI();
        sortPrograms();

        // Announce to screen readers
        const announcer = document.getElementById('search-announcer');
        if (announcer) {
          announcer.textContent = 'Results sorted alphabetically A to Z';
        }
      }
    });

    // Initialize sort toggle UI
