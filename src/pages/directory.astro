<script>
  document.addEventListener('DOMContentLoaded', () => {
    const urlParams = new URLSearchParams(window.location.search);
    const categoryParam = urlParams.get('category');
    const groupParam = urlParams.get('group');
    const searchParam = urlParams.get('q');
    const pageParam = urlParams.get('page');

    const categorySelect = document.getElementById('category-select') as HTMLSelectElement;
    const verifiedCheckbox = document.getElementById('verified-only') as HTMLInputElement;
    const groupBtns = document.querySelectorAll('.group-filter-btn');
    const clearBtn = document.getElementById('clear-filters');
    const cards = document.querySelectorAll('[data-category]');
    const resultsCount = document.getElementById('results-count');
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const emptyState = document.getElementById('empty-state');
    const emptyStateClear = document.getElementById('empty-state-clear');
    const programsGrid = document.getElementById('programs-grid');
    const perPageSelect = document.getElementById('per-page') as HTMLSelectElement;
    const pagination = document.getElementById('pagination');
    const prevPageBtn = document.getElementById('prev-page') as HTMLButtonElement;
    const nextPageBtn = document.getElementById('next-page') as HTMLButtonElement;
    const pageNumbersContainer = document.getElementById('page-numbers');
    const searchPrompt = document.getElementById('search-prompt');
    const programsSection = document.getElementById('programs');
    const quickCategoryBtns = document.querySelectorAll('.quick-category-btn');
    const activeFiltersEl = document.getElementById('active-filters');
    const filtersToggle = document.getElementById('filters-toggle');
    const filtersPanel = document.getElementById('filters-panel');
    const filtersCountBadge = document.getElementById('filters-count-badge');

    groupBtns.forEach((btn) => btn.setAttribute('aria-pressed', 'false'));

    let activeCategory = 'all';
    let activeGroup: string | null = null;
    let verifiedOnly = false;
    let currentPage = pageParam ? parseInt(pageParam, 10) : 1;
    let itemsPerPage = 12;
    let hasActiveSearch = false; // Track if user has searched/filtered

    function updateCategoryUrl() {
      const url = new URL(window.location.href);
      if (activeCategory === 'all') {
        url.searchParams.delete('category');
      } else {
        url.searchParams.set('category', activeCategory);
      }
      window.history.replaceState({}, '', url);
    }

    function updateGroupUrl() {
      const url = new URL(window.location.href);
      if (activeGroup) {
        url.searchParams.set('group', activeGroup);
      } else {
        url.searchParams.delete('group');
      }
      window.history.replaceState({}, '', url);
    }

    function clearActiveGroup() {
      activeGroup = null;
      groupBtns.forEach((btn) => {
        btn.removeAttribute('data-active');
        btn.setAttribute('aria-pressed', 'false');
        btn.classList.remove(
          'bg-primary-100',
          'dark:bg-primary-900/50',
          'border-primary-400',
          'dark:border-primary-600',
          'text-primary-700',
          'dark:text-primary-300'
        );
        btn.classList.add(
          'bg-white',
          'dark:bg-neutral-700',
          'border-neutral-200',
          'dark:border-neutral-600'
        );
      });
      updateGroupUrl();
    }

    function renderActiveFilters() {
      if (!activeFiltersEl) return;
      activeFiltersEl.textContent = '';

      const filters = [];

      if (activeCategory !== 'all') {
        filters.push({
          label: `Category: ${activeCategory}`,
          clear: () => {
            activeCategory = 'all';
            if (categorySelect) categorySelect.value = 'all';
            updateCategoryUrl();
          },
        });
      }

      if (activeGroup) {
        const groupButton = document.querySelector(`[data-group="${activeGroup}"]`);
        const groupLabel = groupButton?.textContent?.trim() || activeGroup;
        filters.push({
          label: `Group: ${groupLabel}`,
          clear: () => clearActiveGroup(),
        });
      }

      if (verifiedOnly) {
        filters.push({
          label: 'Verified only',
          clear: () => {
            verifiedOnly = false;
            if (verifiedCheckbox) verifiedCheckbox.checked = false;
          },
        });
      }

      if (filters.length === 0) {
        activeFiltersEl.classList.add('hidden');
        filtersCountBadge?.classList.add('hidden');
        return;
      }

      activeFiltersEl.classList.remove('hidden');
      if (filtersCountBadge) {
        filtersCountBadge.textContent = String(filters.length);
        filtersCountBadge.classList.remove('hidden');
      }

      filters.forEach((filter) => {
        const chip = document.createElement('button');
        chip.type = 'button';
        chip.className =
          'inline-flex items-center gap-2 px-3 py-1 rounded-full bg-neutral-100 text-neutral-700 dark:bg-neutral-800 dark:text-neutral-200 border border-neutral-200 dark:border-neutral-700 hover:bg-neutral-200 dark:hover:bg-neutral-700 focus:outline-none focus:ring-2 focus:ring-primary-500';
        chip.setAttribute('aria-label', `Remove filter ${filter.label}`);

        const label = document.createElement('span');
        label.textContent = filter.label;
        chip.appendChild(label);

        const icon = document.createElement('span');
        icon.setAttribute('aria-hidden', 'true');
        icon.textContent = '√ó';
        chip.appendChild(icon);

        chip.addEventListener('click', () => {
          filter.clear();
          filterPrograms();
          updateSearchState();
          renderActiveFilters();
        });

        activeFiltersEl.appendChild(chip);
      });
    }

    filtersToggle?.addEventListener('click', () => {
      if (!filtersPanel) return;
      const isHidden = filtersPanel.classList.contains('hidden');
      filtersPanel.classList.toggle('hidden', !isHidden);
      filtersToggle.setAttribute('aria-expanded', String(isHidden));
    });

    // Show/hide the search prompt vs results view
    function updateSearchState() {
      const hasFilters =
        activeCategory !== 'all' || activeGroup !== null || verifiedOnly || hasActiveSearch;

      if (hasFilters) {
        searchPrompt?.classList.add('hidden');
        programsSection?.classList.remove('hidden');
      } else {
        searchPrompt?.classList.remove('hidden');
        programsSection?.classList.add('hidden');
      }
    }

    // Quick category button handlers
    quickCategoryBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        const category = (btn as HTMLElement).dataset.category || '';
        if (categorySelect) {
          categorySelect.value = category;
          activeCategory = category;

          updateCategoryUrl();

          filterPrograms();
          updateSearchState();
          renderActiveFilters();
        }
      });
    });

    // Get filtered cards (respects category, group, verified filters)
    function getFilteredCards(): HTMLElement[] {
      return Array.from(cards).filter((card) => {
        const cardCategory = card.getAttribute('data-category') || '';
        const cardGroups = (card.getAttribute('data-groups') || '').split(',').filter(Boolean);
        const cardVerified = card.getAttribute('data-verified') === 'true';

        const matchesCategory =
          activeCategory === 'all' || cardCategory.toLowerCase() === activeCategory.toLowerCase();
        const matchesGroup = !activeGroup || cardGroups.includes(activeGroup);
        const matchesVerified = !verifiedOnly || cardVerified;

        return matchesCategory && matchesGroup && matchesVerified;
      }) as HTMLElement[];
    }

    // Update pagination UI
    function updatePagination() {
      const filteredCards = getFilteredCards();
      const totalItems = filteredCards.length;
      const showAll = itemsPerPage === -1;
      const totalPages = showAll ? 1 : Math.ceil(totalItems / itemsPerPage);

      // Ensure current page is valid
      if (currentPage > totalPages) currentPage = totalPages;
      if (currentPage < 1) currentPage = 1;

      // Show/hide pagination
      if (showAll || totalPages <= 1) {
        pagination?.classList.add('hidden');
      } else {
        pagination?.classList.remove('hidden');
      }

      // Update prev/next buttons
      if (prevPageBtn) {
        prevPageBtn.disabled = currentPage <= 1;
      }
      if (nextPageBtn) {
        nextPageBtn.disabled = currentPage >= totalPages;
      }

      // Generate page numbers (using safe DOM methods)
      if (pageNumbersContainer) {
        // Clear existing content safely
        while (pageNumbersContainer.firstChild) {
          pageNumbersContainer.removeChild(pageNumbersContainer.firstChild);
        }

        // Show page numbers with ellipsis for large page counts
        const maxVisible = 5;
        let startPage = Math.max(1, currentPage - Math.floor(maxVisible / 2));
        let endPage = Math.min(totalPages, startPage + maxVisible - 1);

        if (endPage - startPage < maxVisible - 1) {
          startPage = Math.max(1, endPage - maxVisible + 1);
        }

        // First page + ellipsis if needed
        if (startPage > 1) {
          pageNumbersContainer.appendChild(createPageButton(1));
          if (startPage > 2) {
            pageNumbersContainer.appendChild(createEllipsis());
          }
        }

        // Page numbers
        for (let i = startPage; i <= endPage; i++) {
          pageNumbersContainer.appendChild(createPageButton(i));
        }

        // Last page + ellipsis if needed
        if (endPage < totalPages) {
          if (endPage < totalPages - 1) {
            pageNumbersContainer.appendChild(createEllipsis());
          }
          pageNumbersContainer.appendChild(createPageButton(totalPages));
        }
      }

      // Update URL
      const url = new URL(window.location.href);
      if (currentPage === 1) {
        url.searchParams.delete('page');
      } else {
        url.searchParams.set('page', currentPage.toString());
      }
      window.history.replaceState({}, '', url);
    }

    function createPageButton(pageNum: number): HTMLButtonElement {
      const btn = document.createElement('button');
      btn.type = 'button';
      btn.textContent = pageNum.toString();
      btn.className =
        pageNum === currentPage
          ? 'px-3 py-1.5 text-sm font-medium text-white bg-primary-600 rounded-lg'
          : 'px-3 py-1.5 text-sm font-medium text-neutral-700 dark:text-neutral-200 bg-white dark:bg-neutral-700 border border-neutral-300 dark:border-neutral-600 rounded-lg hover:bg-neutral-50 dark:hover:bg-neutral-600 transition-colors';
      btn.setAttribute('aria-current', pageNum === currentPage ? 'page' : 'false');
      btn.addEventListener('click', () => goToPage(pageNum));
      return btn;
    }

    function createEllipsis(): HTMLSpanElement {
      const span = document.createElement('span');
      span.className = 'px-2 text-neutral-500';
      span.textContent = '...';
      return span;
    }

    function goToPage(page: number) {
      currentPage = page;
      applyPagination();
      updatePagination();

      // Scroll to top of programs section
      document.getElementById('programs')?.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }

    // Apply pagination to show only current page items
    function applyPagination() {
      const filteredCards = getFilteredCards();
      const showAll = itemsPerPage === -1;

      // First hide all cards
      cards.forEach((card) => {
        (card as HTMLElement).style.display = 'none';
      });

      // Show only cards for current page
      const startIndex = showAll ? 0 : (currentPage - 1) * itemsPerPage;
      const endIndex = showAll ? filteredCards.length : startIndex + itemsPerPage;

      filteredCards.slice(startIndex, endIndex).forEach((card) => {
        card.style.display = '';
      });

      // Update results count with page info
      const totalFiltered = filteredCards.length;
      if (resultsCount) {
        if (showAll || totalFiltered <= itemsPerPage) {
          resultsCount.textContent = `${totalFiltered} program${totalFiltered !== 1 ? 's' : ''} found`;
        } else {
          const showingStart = startIndex + 1;
          const showingEnd = Math.min(endIndex, totalFiltered);
          resultsCount.textContent = `Showing ${showingStart}-${showingEnd} of ${totalFiltered} programs`;
        }
      }

      // Show/hide empty state
      if (totalFiltered === 0 && (activeCategory !== 'all' || activeGroup || verifiedOnly)) {
        emptyState?.classList.remove('hidden');
        programsGrid?.classList.add('hidden');
        pagination?.classList.add('hidden');
      } else {
        emptyState?.classList.add('hidden');
        programsGrid?.classList.remove('hidden');
      }
    }

    // Update results count and empty state
    function updateCount() {
      applyPagination();
      updatePagination();
    }

    // Filter programs based on current state
    function filterPrograms() {
      // Reset to page 1 when filters change
      currentPage = 1;
      applyPagination();
      updatePagination();

      // Show/hide clear button
      if (activeCategory !== 'all' || activeGroup || verifiedOnly) {
        clearBtn?.classList.remove('hidden');
      } else {
        clearBtn?.classList.add('hidden');
      }
    }

    // Per-page select handler
    perPageSelect?.addEventListener('change', () => {
      const value = perPageSelect.value;
      itemsPerPage = value === 'all' ? -1 : parseInt(value, 10);
      currentPage = 1;
      applyPagination();
      updatePagination();
    });

    // Pagination button handlers
    prevPageBtn?.addEventListener('click', () => {
      if (currentPage > 1) {
        goToPage(currentPage - 1);
      }
    });

    nextPageBtn?.addEventListener('click', () => {
      const filteredCards = getFilteredCards();
      const totalPages = Math.ceil(filteredCards.length / itemsPerPage);
      if (currentPage < totalPages) {
        goToPage(currentPage + 1);
      }
    });

    // Verified checkbox change handler
    verifiedCheckbox?.addEventListener('change', () => {
      verifiedOnly = verifiedCheckbox.checked;
      filterPrograms();
      updateSearchState();
      renderActiveFilters();
    });

    // Category select change handler
    categorySelect?.addEventListener('change', () => {
      activeCategory = categorySelect.value;

      updateCategoryUrl();

      filterPrograms();
      updateSearchState();
      renderActiveFilters();
    });

    // Group button click handler
    groupBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        const group = (btn as HTMLElement).dataset.group || '';

        if (activeGroup === group) {
          // Deselect
          clearActiveGroup();
        } else {
          // Deselect all first
          groupBtns.forEach((b) => {
            b.removeAttribute('data-active');
            b.setAttribute('aria-pressed', 'false');
            b.classList.remove(
              'bg-primary-100',
              'dark:bg-primary-900/50',
              'border-primary-400',
              'dark:border-primary-600',
              'text-primary-700',
              'dark:text-primary-300'
            );
            b.classList.add(
              'bg-white',
              'dark:bg-neutral-700',
              'border-neutral-200',
              'dark:border-neutral-600'
            );
          });

          // Select this one
          activeGroup = group;
          btn.setAttribute('data-active', 'true');
          btn.setAttribute('aria-pressed', 'true');
          btn.classList.remove(
            'bg-white',
            'dark:bg-neutral-700',
            'border-neutral-200',
            'dark:border-neutral-600'
          );
          btn.classList.add(
            'bg-primary-100',
            'dark:bg-primary-900/50',
            'border-primary-400',
            'dark:border-primary-600',
            'text-primary-700',
            'dark:text-primary-300'
          );

          updateGroupUrl();
        }

        filterPrograms();
        updateSearchState();
        renderActiveFilters();
      });
    });

    // Clear all filters function
    function clearAllFilters() {
      activeCategory = 'all';
      clearActiveGroup();
      verifiedOnly = false;

      // Reset category select
      if (categorySelect) {
        categorySelect.value = 'all';
      }

      // Reset verified checkbox
      if (verifiedCheckbox) {
        verifiedCheckbox.checked = false;
      }

      // Clear URL params
      const url = new URL(window.location.href);
      url.searchParams.delete('category');
      url.searchParams.delete('group');
      url.searchParams.delete('q');
      window.history.replaceState({}, '', url);

      // Reset search input
      if (searchInput) {
        searchInput.value = '';
      }
      hasActiveSearch = false;

      filterPrograms();
      updateSearchState();
      renderActiveFilters();
    }

    // Clear filters button handlers
    clearBtn?.addEventListener('click', clearAllFilters);
    emptyStateClear?.addEventListener('click', clearAllFilters);

    // Apply initial filters from URL
    if (categoryParam) {
      // Find matching option (case-insensitive)
      const options = categorySelect?.options;
      if (options) {
        for (let i = 0; i < options.length; i++) {
          if (options[i].value.toLowerCase() === categoryParam.toLowerCase()) {
            categorySelect.selectedIndex = i;
            activeCategory = options[i].value;
            break;
          }
        }
      }
    }

    if (groupParam) {
      activeGroup = groupParam;
      const matchingBtn = document.querySelector(`[data-group="${groupParam}"]`);
      if (matchingBtn) {
        matchingBtn.setAttribute('data-active', 'true');
        matchingBtn.setAttribute('aria-pressed', 'true');
        matchingBtn.classList.remove(
          'bg-white',
          'dark:bg-neutral-700',
          'border-neutral-200',
          'dark:border-neutral-600'
        );
        matchingBtn.classList.add(
          'bg-primary-100',
          'dark:bg-primary-900/50',
          'border-primary-400',
          'dark:border-primary-600',
          'text-primary-700',
          'dark:text-primary-300'
        );
      }
    }

    // Check if we have any initial filters from URL
    if (categoryParam || groupParam || searchParam) {
      hasActiveSearch = !!searchParam;
      filterPrograms();
      updateSearchState();
      renderActiveFilters();
    } else {
      // No initial filters - show search prompt, hide all cards
      cards.forEach((card) => {
        (card as HTMLElement).style.display = 'none';
      });
      updateSearchState();
      renderActiveFilters();
    }

    // Handle hash fragment to scroll to specific program (from map)
    function handleHashNavigation() {
      const hash = window.location.hash;
      if (hash && hash.length > 1) {
        const programId = hash.substring(1); // Remove the #
        const targetCard = document.querySelector(`[data-program-id="${programId}"]`);

        if (targetCard) {
          // Show programs section since we're navigating to a specific program
          hasActiveSearch = true;
          updateSearchState();

          // Make sure the card is visible (clear any filters that might hide it)
          const cardCategory = targetCard.getAttribute('data-category') || '';
          if (
            activeCategory !== 'all' &&
            cardCategory.toLowerCase() !== activeCategory.toLowerCase()
          ) {
            // Reset category filter to show all
            activeCategory = 'all';
            if (categorySelect) categorySelect.value = 'all';
          }

          // Clear group filter if it would hide the card
          const cardGroups = (targetCard.getAttribute('data-groups') || '')
            .split(',')
            .filter(Boolean);
          if (activeGroup && !cardGroups.includes(activeGroup)) {
            activeGroup = null;
            groupBtns.forEach((btn) => {
              btn.classList.remove(
                'bg-primary-100',
                'dark:bg-primary-900/50',
                'border-primary-400',
                'dark:border-primary-600',
                'text-primary-700',
                'dark:text-primary-300'
              );
              btn.classList.add(
                'bg-white',
                'dark:bg-neutral-700',
                'border-neutral-200',
                'dark:border-neutral-600'
              );
            });
          }

          // Find which page the target card is on and navigate there
          const filteredCards = getFilteredCards();
          const targetIndex = filteredCards.indexOf(targetCard as HTMLElement);

          if (targetIndex >= 0 && itemsPerPage !== -1) {
            const targetPage = Math.floor(targetIndex / itemsPerPage) + 1;
            currentPage = targetPage;
          }

          // Apply filters to ensure card is visible
          applyPagination();
          updatePagination();

          // Scroll to the card with some offset for the header
          setTimeout(() => {
            targetCard.scrollIntoView({ behavior: 'smooth', block: 'center' });

            // Highlight the card temporarily
            targetCard.classList.add('ring-2', 'ring-primary-500', 'ring-offset-2');
            setTimeout(() => {
              targetCard.classList.remove('ring-2', 'ring-primary-500', 'ring-offset-2');
            }, 3000);
          }, 100);
        }
      }
    }

    // Handle hash on page load
    handleHashNavigation();

    // Handle hash changes (e.g., back/forward navigation)
    window.addEventListener('hashchange', handleHashNavigation);

    // ==========================================
    // Sort Toggle Functionality
    // ==========================================

    const sortRelevanceBtn = document.getElementById('sort-relevance');
    const sortAlphaBtn = document.getElementById('sort-alpha');
    let currentSort: 'relevance' | 'alpha' = 'relevance';

    // Store original DOM order for relevance sorting
    const originalOrder: Element[] = Array.from(programsGrid?.children || []);

    function updateSortToggleUI() {
      const activeClasses = [
        'bg-primary-100',
        'dark:bg-primary-900/50',
        'text-primary-700',
        'dark:text-primary-300',
        'border-primary-400',
        'dark:border-primary-600',
      ];
      const inactiveClasses = [
        'bg-white',
        'dark:bg-neutral-800',
        'text-neutral-700',
        'dark:text-neutral-300',
      ];

      if (currentSort === 'relevance') {
        sortRelevanceBtn?.classList.remove(...inactiveClasses);
        sortRelevanceBtn?.classList.add(...activeClasses);
        sortRelevanceBtn?.setAttribute('aria-checked', 'true');

        sortAlphaBtn?.classList.remove(...activeClasses);
        sortAlphaBtn?.classList.add(...inactiveClasses);
        sortAlphaBtn?.setAttribute('aria-checked', 'false');
      } else {
        sortAlphaBtn?.classList.remove(...inactiveClasses);
        sortAlphaBtn?.classList.add(...activeClasses);
        sortAlphaBtn?.setAttribute('aria-checked', 'true');

        sortRelevanceBtn?.classList.remove(...activeClasses);
        sortRelevanceBtn?.classList.add(...inactiveClasses);
        sortRelevanceBtn?.setAttribute('aria-checked', 'false');
      }
    }

    function sortPrograms() {
      if (!programsGrid) return;

      const visibleCards = Array.from(programsGrid.children).filter(
        (card) => (card as HTMLElement).style.display !== 'none'
      ) as HTMLElement[];
      const hasQuery = searchInput?.value.trim().length > 0;
      const hasRankedResults = visibleCards.some((card) =>
        card.hasAttribute('data-relevance-rank')
      );

      if (currentSort === 'alpha') {
        // Sort alphabetically by program name
        visibleCards.sort((a, b) => {
          const nameA = a.querySelector('[data-program-name]')?.textContent?.toLowerCase() || '';
          const nameB = b.querySelector('[data-program-name]')?.textContent?.toLowerCase() || '';
          return nameA.localeCompare(nameB);
        });

        // Reorder DOM elements
        visibleCards.forEach((card) => {
          programsGrid.appendChild(card);
        });
      } else {
        if (hasQuery && hasRankedResults) {
          visibleCards.sort((a, b) => {
            const rankA = parseInt(a.getAttribute('data-relevance-rank') || '999999', 10);
            const rankB = parseInt(b.getAttribute('data-relevance-rank') || '999999', 10);
            if (rankA !== rankB) return rankA - rankB;

            const nameA = a.querySelector('[data-program-name]')?.textContent?.toLowerCase() || '';
            const nameB = b.querySelector('[data-program-name]')?.textContent?.toLowerCase() || '';
            if (nameA !== nameB) return nameA.localeCompare(nameB);

            return 0;
          });

          visibleCards.forEach((card) => {
            programsGrid.appendChild(card);
          });
        } else {
          // Restore original order
          originalOrder.forEach((card) => {
            if (programsGrid.contains(card)) {
              programsGrid.appendChild(card);
            }
          });
        }
      }
    }

    sortRelevanceBtn?.addEventListener('click', () => {
      if (currentSort !== 'relevance') {
        currentSort = 'relevance';
        updateSortToggleUI();
        sortPrograms();

        // Announce to screen readers
        const announcer = document.getElementById('search-announcer');
        if (announcer) {
          announcer.textContent = 'Results sorted by relevance';
        }
      }
    });

    sortAlphaBtn?.addEventListener('click', () => {
      if (currentSort !== 'alpha') {
        currentSort = 'alpha';
        updateSortToggleUI();
        sortPrograms();

        // Announce to screen readers
        const announcer = document.getElementById('search-announcer');
        if (announcer) {
          announcer.textContent = 'Results sorted alphabetically A to Z';
        }
      }
    });

    // Initialize sort toggle UI
    updateSortToggleUI();

    // Listen for search input to show results
    searchInput?.addEventListener('input', () => {
      const hasQuery = searchInput.value.trim().length > 0;
      if (hasQuery !== hasActiveSearch) {
        hasActiveSearch = hasQuery;
        updateSearchState();
      }
    });

    // Also handle programmatic search updates (from URL or keyboard shortcuts)
    searchInput?.addEventListener('change', () => {
      const hasQuery = searchInput.value.trim().length > 0;
      hasActiveSearch = hasQuery;
      updateSearchState();
    });
  });
</script>

