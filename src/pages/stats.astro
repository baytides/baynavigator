---
import Layout from '../layouts/BaseLayout.astro';
---

<Layout title="Open Analytics | Bay Navigator">
  <main class="container mx-auto px-4 py-8 max-w-6xl">
    
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold mb-2">Transparency Dashboard</h1>
      <p class="text-gray-600 dark:text-gray-400">
        Live, privacy-preserving stats for baynavigator.org.
      </p>
    </div>

    <div class="bg-white dark:bg-gray-900 rounded-lg shadow-sm border border-gray-200 dark:border-gray-800 overflow-hidden">
      <iframe 
        plausible-embed 
        src="https://plausible.baytides.org/share/baynavigator.org?auth=mfRHgJdJhCDVnnpGLX4RM&embed=true&theme=system&background=transparent" 
        scrolling="no" 
        frameborder="0" 
        loading="lazy" 
        style="width: 1px; min-width: 100%; height: 1600px; color-scheme: auto;">
      </iframe>
    </div>

    <div class="mt-4 text-center text-sm text-gray-500">
      Stats powered by <a target="_blank" class="text-indigo-600 hover:underline dark:text-indigo-400" href="https://github.com/plausible/community-edition/">Plausible Community Edition (CE)</a>
    </div>

    <script async src="https://plausible.baytides.org/js/embed.host.js"></script>
    
  </main>
</Layout>
