import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import fs from 'fs';
import path from 'path';
import yaml from 'js-yaml';

// Load site configuration
const siteConfigPath = path.join(process.cwd(), 'src/data/site-config.yml');
let onionAddress = '';
try {
  const siteConfig = yaml.load(fs.readFileSync(siteConfigPath, 'utf-8')) as {
    onion_address?: string;
  };
  onionAddress = siteConfig?.onion_address || '';
} catch (e) {
  // Config file might not exist yet
}

// Count total programs dynamically at build time
const dataDir = path.join(process.cwd(), 'src/data');
const dataFiles = [
  'recreation.yml',
  'transportation.yml',
  'food.yml',
  'health.yml',
  'utilities.yml',
  'education.yml',
  'finance.yml',
  'legal.yml',
  'technology.yml',
  'community.yml',
  'equipment.yml',
  'library_resources.yml',
  'pet_resources.yml',
  'federal-benefits.yml',
  'housing.yml',
  'employment.yml',
];

let programCount = 0;
for (const file of dataFiles) {
  try {
    const content = fs.readFileSync(path.join(dataDir, file), 'utf-8');
    const matches = content.match(/^- id:/gm);
    if (matches) programCount += matches.length;
  } catch (e) {
    // File might not exist
  }
}

// Round to nearest 50 for display
const displayCount = Math.floor(programCount / 50) * 50;
