---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
---

<BaseLayout
  title="Credits & Acknowledgments"
  description="Third-party tools, libraries, and services that power Bay Navigator."
>
  <section class="section">
    <div class="container-page">
      <div class="max-w-4xl mx-auto">
        <Breadcrumb items={[{ label: 'Credits', href: '/credits' }]} />
        <h1 class="text-4xl font-bold text-neutral-900 dark:text-white mb-4">
          Credits & Acknowledgments
        </h1>
        <p class="text-lg text-neutral-600 dark:text-neutral-300 mb-8">
          Bay Navigator is built with open-source software and privacy-respecting services. We're
          grateful to these projects and their contributors.
        </p>

        <!-- Sponsors Section -->
        <section class="mb-12">
          <h2
            class="text-2xl font-bold text-neutral-900 dark:text-white mb-6 flex items-center gap-2"
          >
            <svg
              class="w-6 h-6 text-primary-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
              ></path>
            </svg>
            Sponsors
          </h2>
          <div class="grid md:grid-cols-2 gap-6">
            <a
              href="https://www.microsoft.com/en-us/nonprofits"
              target="_blank"
              rel="noopener"
              class="bg-white dark:bg-neutral-800 rounded-xl p-6 shadow-sm border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-700 transition-colors"
            >
              <div class="flex items-center gap-3 mb-3">
                <svg class="w-8 h-8" viewBox="0 0 23 23">
                  <rect x="1" y="1" width="10" height="10" fill="#F25022"></rect>
                  <rect x="12" y="1" width="10" height="10" fill="#7FBA00"></rect>
                  <rect x="1" y="12" width="10" height="10" fill="#00A4EF"></rect>
                  <rect x="12" y="12" width="10" height="10" fill="#FFB900"></rect>
                </svg>
                <span class="text-lg font-semibold text-neutral-900 dark:text-white"
                  >Microsoft for Nonprofits</span
                >
              </div>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Azure cloud credits and GitHub Team sponsorship enabling our infrastructure.
              </p>
            </a>

            <a
              href="https://www.cloudflare.com/galileo/"
              target="_blank"
              rel="noopener"
              class="bg-white dark:bg-neutral-800 rounded-xl p-6 shadow-sm border border-neutral-200 dark:border-neutral-700 hover:border-orange-300 dark:hover:border-orange-700 transition-colors"
            >
              <div class="flex items-center gap-3 mb-3">
                <svg class="w-8 h-8" viewBox="0 0 32 32">
                  <path d="M8.16 23h21.177v-5.86l-4.023-2.307-.694-.3-16.46.113z" fill="#fff"
                  ></path>
                  <path
                    d="M22.012 22.222c.197-.675.122-1.294-.206-1.754-.3-.422-.807-.666-1.416-.694l-11.545-.15c-.075 0-.14-.038-.178-.094s-.047-.13-.028-.206c.038-.113.15-.197.272-.206l11.648-.15c1.38-.066 2.88-1.182 3.404-2.55l.666-1.735a.38.38 0 0 0 .02-.225c-.75-3.395-3.78-5.927-7.4-5.927-3.34 0-6.17 2.157-7.184 5.15-.657-.488-1.5-.75-2.392-.666-1.604.16-2.9 1.444-3.048 3.048a3.58 3.58 0 0 0 .084 1.191A4.84 4.84 0 0 0 0 22.1c0 .234.02.47.047.703.02.113.113.197.225.197H21.58a.29.29 0 0 0 .272-.206l.16-.572z"
                    fill="#f38020"></path>
                  <path
                    d="M25.688 14.803l-.32.01c-.075 0-.14.056-.17.13l-.45 1.566c-.197.675-.122 1.294.206 1.754.3.422.807.666 1.416.694l2.457.15c.075 0 .14.038.178.094s.047.14.028.206c-.038.113-.15.197-.272.206l-2.56.15c-1.388.066-2.88 1.182-3.404 2.55l-.188.478c-.038.094.028.188.13.188h8.797a.23.23 0 0 0 .225-.169A6.41 6.41 0 0 0 32 21.106a6.32 6.32 0 0 0-6.312-6.302"
                    fill="#faae40"></path>
                </svg>
                <span class="text-lg font-semibold text-neutral-900 dark:text-white"
                  >Cloudflare Project Galileo</span
                >
              </div>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Business-tier CDN, DDoS protection, and security services.
              </p>
            </a>
          </div>
        </section>

        <!-- Infrastructure & Services -->
        <section class="mb-12">
          <h2
            class="text-2xl font-bold text-neutral-900 dark:text-white mb-6 flex items-center gap-2"
          >
            <svg
              class="w-6 h-6 text-primary-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
              ></path>
            </svg>
            Infrastructure & Services
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            <a
              href="https://azure.microsoft.com/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Microsoft Azure</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Static Web Apps, AI Search, Functions
              </p>
            </a>
            <a
              href="https://github.com/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">GitHub</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Source control, CI/CD, releases
              </p>
            </a>
            <a
              href="https://www.cloudflare.com/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Cloudflare</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">CDN, security, DNS</p>
            </a>
            <a
              href="https://plausible.io/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">
                Plausible Analytics
              </h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Privacy-friendly analytics
              </p>
            </a>
            <a
              href="https://sentry.io/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Sentry</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Error tracking (mobile apps)
              </p>
            </a>
            <a
              href="https://duckduckgo.com/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">DuckDuckGo Maps</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Privacy-respecting directions
              </p>
            </a>
            <a
              href="https://developers.cloudflare.com/workers-ai/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">
                Cloudflare Workers AI
              </h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">Smart Search (Llama 3.1)</p>
            </a>
            <a
              href="https://azure.microsoft.com/en-us/products/ai-services/openai-service"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Azure OpenAI</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Simple Language (GPT-4o-mini)
              </p>
            </a>
          </div>
        </section>

        <!-- Web Frameworks & Libraries -->
        <section class="mb-12">
          <h2
            class="text-2xl font-bold text-neutral-900 dark:text-white mb-6 flex items-center gap-2"
          >
            <svg
              class="w-6 h-6 text-primary-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
            </svg>
            Web Technologies
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            <a
              href="https://astro.build/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Astro</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">Static site generator</p>
            </a>
            <a
              href="https://tailwindcss.com/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Tailwind CSS</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Utility-first CSS framework
              </p>
            </a>
            <a
              href="https://maplibre.org/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">MapLibre GL JS</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Open-source map rendering
              </p>
            </a>
            <a
              href="https://protomaps.com/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Protomaps</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">PMTiles map format</p>
            </a>
            <a
              href="https://www.fusejs.io/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Fuse.js</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">Fuzzy search library</p>
            </a>
            <a
              href="https://playwright.dev/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Playwright</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">End-to-end testing</p>
            </a>
          </div>
        </section>

        <!-- Mobile App Technologies -->
        <section class="mb-12">
          <h2
            class="text-2xl font-bold text-neutral-900 dark:text-white mb-6 flex items-center gap-2"
          >
            <svg
              class="w-6 h-6 text-primary-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
              ></path>
            </svg>
            Mobile Technologies
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            <a
              href="https://flutter.dev/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Flutter</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Cross-platform app framework
              </p>
            </a>
            <a
              href="https://pub.dev/packages/go_router"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">go_router</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">Declarative routing</p>
            </a>
            <a
              href="https://pub.dev/packages/provider"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Provider</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">State management</p>
            </a>
            <a
              href="https://pub.dev/packages/geolocator"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Geolocator</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">Location services</p>
            </a>
            <a
              href="https://pub.dev/packages/shared_preferences"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">
                shared_preferences
              </h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">Local data storage</p>
            </a>
            <a
              href="https://developer.apple.com/swift/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">SwiftUI</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">visionOS app framework</p>
            </a>
          </div>
        </section>

        <!-- Data Sources -->
        <section class="mb-12">
          <h2
            class="text-2xl font-bold text-neutral-900 dark:text-white mb-6 flex items-center gap-2"
          >
            <svg
              class="w-6 h-6 text-primary-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"
              ></path>
            </svg>
            Data Sources
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            <a
              href="https://www.nps.gov/subjects/developer/api-documentation.htm"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">
                National Park Service API
              </h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Park information and passes
              </p>
            </a>
            <a
              href="https://www.imls.gov/research-evaluation/data-collection/museum-data-files"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">IMLS Museum Data</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Museum directory and locations
              </p>
            </a>
            <a
              href="https://www.usa.gov/benefit-finder"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">USA.gov Benefits</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">Federal benefit programs</p>
            </a>
            <a
              href="https://nominatim.openstreetmap.org/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">
                OpenStreetMap Nominatim
              </h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">Address geocoding</p>
            </a>
            <a
              href="https://www.openstreetmap.org/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">OpenStreetMap</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">Map data (via Protomaps)</p>
            </a>
            <a
              href="https://museums4all.org/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Museums for All</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Discount museum admission
              </p>
            </a>
            <a
              href="https://data.smcgov.org/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">
                San Mateo County Open Data
              </h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                County parks and WiFi locations
              </p>
            </a>
            <a
              href="https://511.org/open-data/transit"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">511 SF Bay API</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Transit stops and service alerts
              </p>
            </a>
            <a
              href="https://ridb.recreation.gov/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">
                Recreation.gov RIDB
              </h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">Federal recreation areas</p>
            </a>
            <a
              href="https://api.bart.gov/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">BART API</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Station info and bike parking
              </p>
            </a>
            <a
              href="https://api.congress.gov/"
              target="_blank"
              rel="noopener"
              class="block bg-white dark:bg-neutral-800 rounded-lg p-4 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-colors"
            >
              <h3 class="font-semibold text-neutral-900 dark:text-white mb-1">Congress.gov API</h3>
              <p class="text-sm text-neutral-600 dark:text-neutral-300">
                Congressional representatives
              </p>
            </a>
            <a
              href="https://geocoding.geo.census.gov/"
